<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/widget_bg_view" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
    <include android:id="@+id/widget_title_layout" layout="@layout/ticktick_appwidget_schedule_title_layout"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/widget_week_bar" android:layout_width="match_parent" android:layout_height="@dimen/grid_widget_week_title_height" android:layout_below="@+id/widget_title_layout">
        <LinearLayout android:orientation="vertical" android:id="@+id/widget_layout_1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/widget_week_1" style="@style/GridWidgetWeek"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/widget_layout_2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/widget_week_2" style="@style/GridWidgetWeek"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/widget_layout_3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/widget_week_3" style="@style/GridWidgetWeek"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/widget_layout_4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/widget_week_4" style="@style/GridWidgetWeek"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/widget_layout_5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/widget_week_5" style="@style/GridWidgetWeek"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/widget_layout_6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/widget_week_6" style="@style/GridWidgetWeek"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/widget_layout_7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/widget_week_7" style="@style/GridWidgetWeek"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/week_bar_month_view_divider" android:layout_width="match_parent" android:layout_height="@dimen/grid_row_layout_divider_height" android:layout_below="@+id/widget_week_bar"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/month_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/week_bar_month_view_divider"/>
    <include android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/week_bar_month_view_divider" layout="@layout/widget_empty_view"/>
    <RelativeLayout android:id="@+id/pro_acount_date_limit" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:background="#ccffffff" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textColor="@color/textColorPrimary_light" android:id="@+id/ai6" android:paddingLeft="@dimen/material_normal_padding" android:paddingRight="@dimen/material_normal_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/arg"/>
            <LinearLayout android:background="@drawable/btn_bg_yellow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="34dp">
                <Button android:textSize="15sp" android:textColor="@android:color/white" android:id="@+id/login" android:background="@drawable/action_bar_item_background_inverse" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="wrap_content" android:layout_height="36dp" android:text="@string/azj"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/title_content_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/widget_title_layout"/>
    <TextView android:gravity="center" android:id="@+id/widget_error_tip" android:padding="@dimen/material_normal_padding" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/b7x"/>
</RelativeLayout>
