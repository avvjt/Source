    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
        <View android:background="?attr/divider_color" android:layout_width="match_parent" android:layout_height="1dp"/>
        <include layout="@layout/layout_quick_date_advanced_pick_basics"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_quick_dates_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:overScrollMode="never"/>
