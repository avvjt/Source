<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/toolbar" layout="@layout/toolbar_layout"/>
    <ScrollView android:background="?attr/activity_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.ticktick.task.view.selectableview.SelectableLinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/widget_task_list" android:layout_width="match_parent" android:layout_height="72dp">
                <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/widget_task_list_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/al0" style="@style/WidgetPreferenceListViewTextNormal"/>
                    <TextView android:id="@+id/widget_task_list_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/b8r" style="@style/WidgetPreferenceListViewTextSmall"/>
                </LinearLayout>
            </com.ticktick.task.view.selectableview.SelectableLinearLayout>
            <com.ticktick.task.view.selectableview.SelectableLinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/widget_list_click" android:layout_width="match_parent" android:layout_height="72dp">
                <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/click_action_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/b8_" style="@style/WidgetPreferenceListViewTextNormal"/>
                    <TextView android:id="@+id/click_action_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/b8_" style="@style/WidgetPreferenceListViewTextSmall"/>
                </LinearLayout>
            </com.ticktick.task.view.selectableview.SelectableLinearLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/toolbar_shadow"/>
</RelativeLayout>
