<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="@dimen/grid_widget_cell_text_height_big_style" android:layout_marginLeft="4dp" android:layout_marginRight="4dp">
        <ImageView android:id="@+id/text_day_bg" android:visibility="gone" android:layout_width="@dimen/grid_widget_cell_text_height_big_style" android:layout_height="wrap_content" android:src="@drawable/widget_grid_day_bg_circle" android:layout_alignLeft="@+id/text_day" android:layout_alignTop="@+id/text_day" android:layout_alignBottom="@+id/text_day"/>
        <TextView android:textSize="13sp" android:gravity="center" android:id="@+id/text_day" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="@dimen/grid_widget_cell_text_height_big_style" android:minWidth="@dimen/grid_widget_cell_text_height_big_style"/>
        <ImageView android:id="@+id/rest_or_work_day" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_toRightOf="@+id/text_day" android:layout_alignTop="@+id/text_day"/>
        <TextView android:textSize="10sp" android:id="@+id/text_extra_task_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:textSize="10sp" android:gravity="center_vertical" android:id="@+id/text_lunar" android:layout_width="match_parent" android:layout_height="@dimen/grid_widget_cell_text_height_big_style" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
</merge>
