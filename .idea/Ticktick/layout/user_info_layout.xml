<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="?android:attr/windowBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/head_click_view" android:layout_width="280dp" android:layout_height="52dp" android:layout_marginBottom="8dp" android:layout_centerVertical="true"/>
