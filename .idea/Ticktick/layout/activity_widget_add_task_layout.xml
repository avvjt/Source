<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/content_layout" android:background="?attr/widget_dialog_bg" android:layout_width="match_parent" android:layout_height="@dimen/widget_add_task_layout_height" android:layout_marginTop="54dp">
        <com.ticktick.task.view.OnSectionChangedEditText android:textSize="18sp" android:textColorHint="?android:attr/textColorHint" android:gravity="start|top" android:id="@+id/task_title" android:background="@null" android:padding="18dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/pu" android:layout_above="@+id/bottom_layout" android:inputType="textImeMultiLine" android:imeOptions="flagNoExtractUi|actionDone"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/bottom_layout" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
            <FrameLayout android:id="@+id/pick_up_time" android:background="?attr/itemSelectableBackground" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="4dp">
                <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/iconColorTertiary" android:layout_gravity="center" android:id="@+id/pick_up_time_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ic_svg_special_calendar"/>
                <TextView android:id="@+id/pick_time_date_num" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/date_icon_text_style"/>
            </FrameLayout>
            <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/iconColorTertiary" android:gravity="center" android:id="@+id/priority_layout" android:background="?attr/itemSelectableBackground" android:layout_width="48dp" android:layout_height="48dp" android:text="@string/ic_svg_priority_high" android:layout_toRightOf="@+id/pick_up_time"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/tag_toggle_layout" android:layout_width="48dp" android:layout_height="48dp" android:layout_toRightOf="@+id/priority_layout">
                <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/iconColorTertiary" android:gravity="center" android:id="@+id/tag_toggle" android:background="?attr/i" android:layout_width="48dp" android:layout_height="48dp" android:text="@string/ic_svg_special_tag"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/assign_toggle_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toRightOf="@+id/tag_toggle_layout">
                <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/iconColorTertiary" android:gravity="center" android:id="@+id/assign_toggle" android:background="?attr/i" android:layout_width="48dp" android:layout_height="match_parent" android:text="@string/ic_svg_quickadd_assign"/>
            </LinearLayout>
            <RelativeLayout android:id="@+id/choose_project_layout" android:background="?attr/itemSelectableBackground" android:layout_width="wrap_content" android:layout_height="48dp" android:minWidth="140dp" android:layout_toLeftOf="@+id/add_task_btn" android:layout_toRightOf="@+id/assign_toggle_layout">
                <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/iconColorTertiary" android:gravity="center" android:id="@+id/project_icon" android:layout_width="48dp" android:layout_height="48dp" android:text="@string/ic_svg_inbox" android:layout_alignParentLeft="true"/>
                <TextView android:textColor="?android:attr/textColorSecondary" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/project_name" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="-6dp" android:text="@string/aps" android:singleLine="true" android:layout_toRightOf="@+id/project_icon"/>
            </RelativeLayout>
            <com.ticktick.task.view.selectableview.SelectableIconTextView android:textSize="24sp" android:textColor="?attr/iconColorTertiary" android:gravity="center" android:id="@+id/add_task_btn" android:background="?attr/i" android:layout_width="48dp" android:layout_height="48dp" android:text="@string/ic_svg_audio_record" android:layout_alignParentRight="true" app:rotateDegrees="180"/>
        </RelativeLayout>
        <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/iconColorTertiary" android:gravity="center" android:id="@+id/icon_goto_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ic_svg_widget_goto_detail" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <com.ticktick.task.view.WidgetVoiceInputView android:id="@+id/voice_input_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.ticktick.task.view.WidgetConfirmVoiceInputView android:id="@+id/confirm_voice_input_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
</FrameLayout>
