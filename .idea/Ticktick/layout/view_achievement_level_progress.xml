<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.ticktick.task.view.UnScalableTextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/black_alpha_24_light" android:id="@+id/tv_start_level" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <com.ticktick.task.view.UnScalableTextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/black_alpha_24_light" android:id="@+id/tv_end_level" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    <View android:id="@+id/achievement_progress_bg" android:background="@drawable/bg_achievement_progress" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginTop="2dp" android:layout_below="@+id/tv_start_level"/>
    <View android:id="@+id/achievement_progress_indicator" android:layout_width="wrap_content" android:layout_height="5dp" android:layout_marginTop="2dp" android:layout_below="@+id/tv_start_level"/>
</RelativeLayout>
