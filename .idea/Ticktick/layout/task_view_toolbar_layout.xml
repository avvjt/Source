<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:roundedImageView="http://schemas.android.com/apk/res-auto" android:id="@+id/top_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/task_detail_view" android:background="?attr/activity_background" android:layout_width="match_parent" android:layout_height="@dimen/two_pane_detail_tool_bar_height">
