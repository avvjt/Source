<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/dialog_title_layout" android:background="@drawable/pro_dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/iv_upgrade_layout" android:background="@color/black_alpha_6_light" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_banner" android:layout_width="420dp" android:layout_height="300dp" android:scaleType="centerCrop" android:layout_alignParentTop="true" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView android:textSize="32sp" android:textColor="@color/textColorPrimary_light" android:gravity="center" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
            <TextView android:textSize="15sp" android:textColor="@color/textColorSecondary_light" android:gravity="start" android:id="@+id/tv_summary" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:lineSpacingMultiplier="1.5"/>
            <TextView android:textSize="14sp" android:textColor="@color/textColorTertiary_light" android:layout_gravity="center" android:id="@+id/tv_swipe_hint" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="@string/azd"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
