<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:skin="http://schemas.android.com/android/skin" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="?attr/drawer_foreground_color" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.ticktick.task.view.RightCropImageView android:id="@+id/slide_user_info_background" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/bg_slide_account" skin:enable="true"/>
    <RelativeLayout android:id="@+id/slide_content" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/photo_layout" android:background="@drawable/action_bar_item_background_inverse" android:focusable="true" android:clickable="true" android:layout_width="64dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="@dimen/nav_header_vertical_spacing" android:layout_marginRight="16dp" android:layout_alignParentTop="true">
            <com.ticktick.task.view.TickTickCircleImageView android:id="@+id/photo" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginTop="26dp" android:src="@drawable/default_photo_light" android:layout_centerVertical="true" app:circle_border_color="@color/white_alpha_100" app:circle_border_width="0dp"/>
            <ImageView android:id="@+id/account_pro_icon" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="13dp" android:src="@drawable/ic_pro_account_small" android:scaleType="centerInside" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/username_email_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="-4dp" android:layout_marginRight="12dp" android:minWidth="40dp" android:layout_below="@+id/photo_layout">
            <com.ticktick.task.view.selectableview.SelectableRelativeLayout android:paddingLeft="4dp" android:paddingRight="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/drawerUsernameColor" android:ellipsize="end" android:id="@+id/account_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/need_verify_email_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="4dp" android:src="@drawable/verify_email_warning" android:scaleType="center" android:layout_toRightOf="@+id/account_username" android:layout_centerVertical="true"/>
            </com.ticktick.task.view.selectableview.SelectableRelativeLayout>
        </RelativeLayout>
        <LinearLayout android:id="@+id/sign_in_up_btn" android:visibility="gone" android:layout_width="match_parent" android:layout_height="32dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="8dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimaryInverse" android:gravity="center" android:id="@+id/no_account_text" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/akz"/>
        </LinearLayout>
        <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/drawerIconColor" android:gravity="center" android:id="@+id/search_btn" android:background="@drawable/action_bar_item_background_inverse" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginTop="@dimen/nav_header_vertical_spacing" android:text="@string/ic_svg_search" android:layout_toLeftOf="@+id/notification_button_layout" android:layout_alignParentTop="true"/>
        <FrameLayout android:id="@+id/notification_button_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/nav_header_vertical_spacing" android:layout_toLeftOf="@+id/settings_btn_layout" android:layout_alignParentTop="true">
            <RelativeLayout android:id="@+id/notification_button" android:background="@drawable/action_bar_item_background_inverse" android:layout_width="48dp" android:layout_height="48dp">
                <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/drawerIconColor" android:gravity="center" android:id="@+id/notification_icon" android:layout_width="43dp" android:layout_height="43dp" android:scaleType="center" android:text="@string/ic_svg_notification" android:layout_centerInParent="true"/>
                <TextView android:textSize="8sp" android:textColor="?android:attr/textColorPrimaryInverse" android:gravity="center" android:layout_gravity="center" android:id="@+id/notification_button_text" android:background="@drawable/em" android:padding="1dp" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginRight="8dp" android:minWidth="13dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </FrameLayout>
        <RelativeLayout android:id="@+id/settings_btn_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/nav_header_vertical_spacing" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
            <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/drawerIconColor" android:gravity="center" android:id="@+id/settings_btn" android:background="@drawable/action_bar_item_background_inverse" android:layout_width="48dp" android:layout_height="48dp" android:scaleType="center" android:tint="?attr/iconColorPrimaryInverse" android:text="@string/ic_svg_settings"/>
        </RelativeLayout>
        <ImageView android:id="@+id/red_point" android:visibility="gone" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:layout_marginRight="12dp" android:src="@drawable/wechat_red_circle" android:layout_alignTop="@+id/settings_btn_layout" android:layout_alignRight="@+id/settings_btn_layout"/>
    </RelativeLayout>
</RelativeLayout>
