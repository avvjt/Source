    </LinearLayout>
    <RelativeLayout android:id="@+id/divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="9dp">
        <ImageView android:layout_width="match_parent" android:layout_height="@dimen/divider_1" android:layout_alignParentBottom="true" style="?attr/tt_divider"/>
    </RelativeLayout>
    <ImageView android:id="@+id/margin_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/divider_1" android:layout_marginLeft="72dp" style="?attr/tt_divider"/>
</LinearLayout>
