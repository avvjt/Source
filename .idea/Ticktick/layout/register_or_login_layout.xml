<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_horizontal" android:id="@+id/content_layout" android:layout_width="match_parent" android:layout_height="@dimen/register_login_layout_content_height">
    <LinearLayout android:orientation="vertical" android:id="@+id/register_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="match_parent" android:layout_height="180dp">
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/edit_text_for_email_login" android:layout_gravity="center_horizontal" android:id="@+id/account_register_edit_username" android:layout_width="288dp" android:layout_height="wrap_content" app:hintTextAppearance="@style/InputLayout_TextAppearance">
                <androidx.appcompat.widget.AppCompatAutoCompleteTextView android:textSize="16sp" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:layout_width="288dp" android:layout_height="50dp" android:ems="10" android:scrollHorizontally="true" android:singleLine="true" android:completionThreshold="1" android:inputType="textEmailAddress" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/edit_text_for_email_login" android:layout_gravity="center_horizontal" android:id="@+id/account_register_edit_password" android:layout_width="288dp" android:layout_height="wrap_content" android:layout_marginTop="55dp" app:hintTextAppearance="@style/InputLayout_TextAppearance">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="16sp" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:layout_width="288dp" android:layout_height="50dp" android:scrollHorizontally="true" android:singleLine="true" android:inputType="textPassword" android:imeOptions="actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:textSize="16sp" android:textColor="@color/white_alpha_100" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/register_tv" android:layout_width="288dp" android:layout_height="40dp" android:layout_marginTop="130dp" android:text="@string/ju"/>
        </FrameLayout>
        <com.ticktick.task.view.selectableview.SelectableTextView android:textSize="14sp" android:textColor="@color/email_login_active_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/change_to_login_layout" android:padding="5dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/cb"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/login_in_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="match_parent" android:layout_height="180dp">
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/edit_text_for_email_login" android:layout_gravity="center_horizontal" android:id="@+id/account_login_in_edit_username" android:layout_width="288dp" android:layout_height="wrap_content" app:hintTextAppearance="@style/InputLayout_TextAppearance">
                <androidx.appcompat.widget.AppCompatAutoCompleteTextView android:textSize="16sp" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:layout_width="288dp" android:layout_height="50dp" android:layout_marginLeft="36dp" android:layout_marginRight="36dp" android:ems="10" android:scrollHorizontally="true" android:singleLine="true" android:completionThreshold="1" android:inputType="textEmailAddress" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/edit_text_for_email_login" android:layout_gravity="center_horizontal" android:id="@+id/account_login_in_edit_password" android:layout_width="288dp" android:layout_height="wrap_content" android:layout_marginTop="55dp" app:hintTextAppearance="@style/InputLayout_TextAppearance">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="16sp" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:layout_width="288dp" android:layout_height="50dp" android:scrollHorizontally="true" android:singleLine="true" android:inputType="textPassword" android:imeOptions="actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:textSize="16sp" android:textColor="@color/white_alpha_100" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/login_in_tv" android:layout_width="288dp" android:layout_height="40dp" android:layout_marginTop="130dp" android:text="@string/ft"/>
        </FrameLayout>
        <RelativeLayout android:layout_gravity="center_horizontal" android:layout_width="298dp" android:layout_height="wrap_content" android:layout_marginTop="3dp">
            <com.ticktick.task.view.selectableview.SelectableTextView android:textSize="14sp" android:textColor="#5c000000" android:gravity="center" android:id="@+id/forget_password" android:padding="5dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tl" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <com.ticktick.task.view.selectableview.SelectableTextView android:textSize="14sp" android:textColor="#5c000000" android:gravity="center" android:id="@+id/change_to_register_layout" android:padding="5dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ju" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
