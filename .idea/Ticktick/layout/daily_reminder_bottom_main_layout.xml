<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:background="?attr/activity_background" android:layout_width="match_parent" android:layout_height="72dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/mark_done" android:background="?attr/i" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <com.ticktick.task.view.IconTextView android:textSize="18sp" android:textColor="?attr/colorHighlight" android:gravity="center" android:text="@string/ic_svg_task_uncheck" style="@style/daily_reminder_detail_imageview"/>
        <TextView android:id="@+id/tv_done_action" android:text="@string/tn" style="@style/daily_reminder_detail_text"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/today_layout" android:background="?attr/i" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/daily_reminder_bottom_date_margin_top">
            <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/colorHighlight" android:gravity="center" android:layout_marginTop="0dp" android:text="@string/ic_svg_daily_reminder_today" android:layout_centerInParent="true" style="@style/daily_reminder_detail_imageview"/>
            <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="?attr/colorHighlight" android:id="@+id/today_text" android:paddingTop="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView android:text="@string/ajn" style="@style/daily_reminder_detail_text"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/change_due_date_after" android:background="?attr/i" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/colorHighlight" android:gravity="center" android:text="@string/ic_svg_daily_reminder_later" style="@style/daily_reminder_detail_imageview"/>
        <TextView android:text="@string/gv" style="@style/daily_reminder_detail_text"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/delete" android:background="?attr/i" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/colorHighlight" android:gravity="center" android:text="@string/ic_svg_daily_reminder_delete" style="@style/daily_reminder_detail_imageview"/>
        <TextView android:text="@string/lh" style="@style/daily_reminder_detail_text"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/next_task" android:background="?attr/i" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <com.ticktick.task.view.IconTextView android:textSize="24sp" android:textColor="?attr/colorHighlight" android:gravity="center" android:id="@+id/next_task_icon" android:text="@string/ic_svg_daily_reminder_next" style="@style/daily_reminder_detail_imageview"/>
        <TextView android:id="@+id/next_task_text" android:text="@string/kk" style="@style/daily_reminder_detail_text"/>
    </LinearLayout>
</LinearLayout>
