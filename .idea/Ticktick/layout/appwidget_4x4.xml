                    <ImageView android:id="@+id/widget_assign_photo_7" style="@style/widget_item_avatar_4x4"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <include android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/widget_title_layout" layout="@layout/widget_empty_view"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/widget_foot_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="34dp" android:layout_alignParentBottom="true">
            <ImageView android:id="@+id/widget_btn_pre" android:background="@drawable/item_background_holo_dark" android:layout_width="@dimen/widget_title_icon_width" android:layout_height="wrap_content" android:src="@drawable/widget_pre_week_white" android:scaleType="center" android:minHeight="34dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="10sp" android:ellipsize="end" android:gravity="center" android:id="@+id/widget_task_page_index" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="42dp" android:minHeight="34dp" android:singleLine="true" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/widget_btn_next" android:background="@drawable/item_background_holo_dark" android:layout_width="@dimen/widget_title_icon_width" android:layout_height="wrap_content" android:src="@drawable/widget_next_week_white" android:scaleType="center" android:minHeight="34dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:gravity="center" android:id="@+id/widget_error_tip" android:padding="@dimen/material_normal_padding" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/b7x"/>
        <ImageView android:id="@+id/title_content_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/widget_title_layout"/>
    </RelativeLayout>
</RelativeLayout>
