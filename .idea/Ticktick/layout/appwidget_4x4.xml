                    <TextView android:id="@+id/widget_item_text_1" style="@style/widget_item_text_4x4"/>
                    <TextView android:id="@+id/widget_item_date_1" style="@style/widget_item_date_4x4"/>
                    <ImageView android:id="@+id/widget_assign_photo_1" style="@style/widget_item_avatar_4x4"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/widget_layout_2" style="@style/widget_layout_4x4">
                    <ImageView android:id="@+id/widget_color_2" style="@style/widget_item_color"/>
                    <TextView android:id="@+id/widget_item_indent_2" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/widget_item_check_2" style="@style/widget_item_check_4x4"/>
                    <TextView android:id="@+id/widget_item_text_2" style="@style/widget_item_text_4x4"/>
                    <TextView android:id="@+id/widget_item_date_2" style="@style/widget_item_date_4x4"/>
                    <ImageView android:id="@+id/widget_assign_photo_2" style="@style/widget_item_avatar_4x4"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/widget_layout_3" style="@style/widget_layout_4x4">
                    <ImageView android:id="@+id/widget_color_3" style="@style/widget_item_color"/>
                    <TextView android:id="@+id/widget_item_indent_3" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/widget_item_check_3" style="@style/widget_item_check_4x4"/>
                    <TextView android:id="@+id/widget_item_text_3" style="@style/widget_item_text_4x4"/>
                    <TextView android:id="@+id/widget_item_date_3" style="@style/widget_item_date_4x4"/>
                    <ImageView android:id="@+id/widget_assign_photo_3" style="@style/widget_item_avatar_4x4"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/widget_layout_4" style="@style/widget_layout_4x4">
                    <ImageView android:id="@+id/widget_color_4" style="@style/widget_item_color"/>
                    <TextView android:id="@+id/widget_item_indent_4" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/widget_item_check_4" style="@style/widget_item_check_4x4"/>
                    <TextView android:id="@+id/widget_item_text_4" style="@style/widget_item_text_4x4"/>
                    <TextView android:id="@+id/widget_item_date_4" style="@style/widget_item_date_4x4"/>
                    <ImageView android:id="@+id/widget_assign_photo_4" style="@style/widget_item_avatar_4x4"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/widget_layout_5" style="@style/widget_layout_4x4">
                    <ImageView android:id="@+id/widget_color_5" style="@style/widget_item_color"/>
                    <TextView android:id="@+id/widget_item_indent_5" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/widget_item_check_5" style="@style/widget_item_check_4x4"/>
                    <TextView android:id="@+id/widget_item_text_5" style="@style/widget_item_text_4x4"/>
                    <TextView android:id="@+id/widget_item_date_5" style="@style/widget_item_date_4x4"/>
                    <ImageView android:id="@+id/widget_assign_photo_5" style="@style/widget_item_avatar_4x4"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/widget_layout_6" style="@style/widget_layout_4x4">
                    <ImageView android:id="@+id/widget_color_6" style="@style/widget_item_color"/>
                    <TextView android:id="@+id/widget_item_indent_6" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/widget_item_check_6" style="@style/widget_item_check_4x4"/>
                    <TextView android:id="@+id/widget_item_text_6" style="@style/widget_item_text_4x4"/>
                    <TextView android:id="@+id/widget_item_date_6" style="@style/widget_item_date_4x4"/>
                    <ImageView android:id="@+id/widget_assign_photo_6" style="@style/widget_item_avatar_4x4"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/widget_layout_7" style="@style/widget_layout_4x4">
                    <ImageView android:id="@+id/widget_color_7" style="@style/widget_item_color"/>
                    <TextView android:id="@+id/widget_item_indent_7" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/widget_item_check_7" style="@style/widget_item_check_4x4"/>
                    <TextView android:id="@+id/widget_item_text_7" style="@style/widget_item_text_4x4"/>
