<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="362dp" android:layout_centerInParent="true">
        <ImageView android:id="@+id/widget_bg_view" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
        <include android:id="@+id/widget_title_layout" layout="@layout/appwidget_title_layout"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/widget_titlebar_height" android:layout_above="@+id/widget_foot_bar">
            <LinearLayout android:orientation="vertical" android:id="@+id/widget_content" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:id="@+id/widget_layout_1" style="@style/widget_layout_4x4">
                    <ImageView android:id="@+id/widget_color_1" style="@style/widget_item_color"/>
                    <TextView android:id="@+id/widget_item_indent_1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
