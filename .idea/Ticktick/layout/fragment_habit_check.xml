<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottie_animation_view" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <View android:id="@+id/mask_view" android:background="@color/black_alpha_100" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.2"/>
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/ll_name_and_comment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="184dp">
        <TextView android:textSize="32sp" android:textColor="@color/white_alpha_100" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@+id/tv_habit_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="36dp" android:layout_marginRight="36dp" android:maxLines="3"/>
        <TextView android:textSize="16sp" android:textColor="@color/white_alpha_80" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@+id/tv_habit_comment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="36dp" android:layout_marginRight="36dp" android:maxLines="3" android:fontFamily="sans-serif"/>
    </LinearLayout>
    <FrameLayout android:layout_gravity="bottom" android:id="@+id/layout_habit_change_infos" android:layout_width="match_parent" android:layout_height="@dimen/habit_check_view_height" android:layout_marginBottom="68dp">
        <com.ticktick.task.view.HabitCheckInView android:layout_gravity="center_horizontal" android:id="@+id/habit_check_in_view" android:visibility="gone" android:layout_width="@dimen/habit_check_view_width" android:layout_height="@dimen/habit_check_view_height"/>
        <TextView android:textSize="28sp" android:textColor="@color/white_alpha_100" android:gravity="center" android:id="@+id/tv_checked_today" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/va"/>
        <TextView android:textSize="48sp" android:textColor="@color/white_alpha_100" android:gravity="center" android:id="@+id/tv_archived" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/v6"/>
    </FrameLayout>
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/layout_value_goal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp">
        <com.ticktick.task.view.LineProgress android:id="@+id/progress_value_goal" android:layout_width="140dp" android:layout_height="6dp" app:orientation="horizontal" app:progress_color="@color/white_alpha_100" app:progress_highlight_color="@color/white_alpha_100" app:railway_color="@color/black_alpha_10" app:stoke_width="6dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/white_alpha_100" android:ellipsize="end" android:id="@+id/tv_value_goal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="8dp" android:layout_marginRight="24dp" android:singleLine="true"/>
    </LinearLayout>
</FrameLayout>
