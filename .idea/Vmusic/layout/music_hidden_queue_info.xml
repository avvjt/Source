    <include layout="@layout/ghost_card_fade_from_top"/>
    <include layout="@layout/ghost_card"/>
    <include layout="@layout/ghost_card"/>
    <include layout="@layout/ghost_card"/>
    <include layout="@layout/ghost_card"/>
