<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/live_stream_offline_slate" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.apps.youtube.music.ui.image.AutoCropImageView android:id="@+id/live_stream_thumbnail" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:layout_gravity="bottom" android:id="@+id/bottom_content_container" android:background="#c1000000" android:layout_width="match_parent" android:layout_height="56dp">
        <ImageView android:id="@+id/live_stream_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_livestreaming_white_24" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginStart="@dimen/item_large_spacing" android:layout_marginEnd="@dimen/item_large_spacing"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toEndOf="@+id/live_stream_icon">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="@style/TextAppearance.YouTubeMusic.Title2" android:id="@+id/main_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="@style/TextAppearance.YouTubeMusic.Subtitle1" android:id="@+id/subtitle_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
