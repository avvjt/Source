<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:yt="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.apps.youtube.music.ui.image.AutoCropImageView android:id="@+id/player_thumbnail" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <FrameLayout android:id="@+id/player_mdx_mini_layout" android:background="#33000000" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center" android:id="@+id/mdx_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/yt_fill_chromecast_white_24"/>
    </FrameLayout>
    <View android:layout_gravity="bottom" android:id="@+id/player_bottom_shadow" android:background="@drawable/player_bottom_bar" android:layout_width="match_parent" android:layout_height="50dp"/>
    <View android:layout_gravity="top" android:id="@+id/player_top_shadow" android:background="@drawable/player_top_bar" android:layout_width="match_parent" android:layout_height="56dp"/>
    <include layout="@layout/music_live_stream_offline_slate_overlay"/>
    <RelativeLayout android:id="@+id/controls_layout" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/player_control_screen" android:background="@color/ytm_color_black_at_50pct" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <RelativeLayout android:id="@+id/player_top_ui_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/large_font_size" android:textColor="@android:color/white" android:ellipsize="marquee" android:id="@+id/player_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/item_small_spacing" android:singleLine="true" android:layout_alignParentTop="true" android:layout_alignWithParentIfMissing="true" android:textAlignment="viewStart" android:layout_marginStart="@dimen/item_small_spacing" android:layout_marginEnd="@dimen/item_extra_large_spacing" android:layout_toStartOf="@+id/audio_video_switch_pill_container" android:layout_toEndOf="@+id/player_collapse_button"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:textColor="@android:color/white" android:ellipsize="marquee" android:id="@+id/player_artist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/player_title" android:layout_alignWithParentIfMissing="true" android:textAlignment="viewStart" android:layout_marginStart="@dimen/item_small_spacing" android:layout_marginEnd="@dimen/item_extra_large_spacing" android:layout_toStartOf="@+id/audio_video_switch_pill_container" android:layout_toEndOf="@+id/player_collapse_button"/>
            <FrameLayout android:layout_gravity="center" android:id="@+id/audio_video_switch_pill_container" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_centerHorizontal="true"/>
            <com.google.android.libraries.youtube.common.ui.TouchImageView android:id="@+id/player_collapse_button" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/yt_outline_chevron_down_white_24" android:scaleType="center" android:contentDescription="@string/accessibility_collapse" android:layout_alignParentStart="true" style="@style/MusicPlayerButton"/>
            <com.google.android.libraries.youtube.common.ui.TouchImageView android:id="@+id/hide_controls_button" android:visibility="gone" android:layout_width="@dimen/controls_overlay_timebar_height" android:layout_height="@dimen/controls_overlay_timebar_height" android:src="@drawable/player_hide_controls" android:scaleType="center" android:layout_alignParentTop="true" android:contentDescription="@string/accessibility_hide_player_controls" android:layout_alignParentEnd="true" style="@style/MusicPlayerButton"/>
            <com.google.android.libraries.youtube.common.ui.TouchImageView android:id="@+id/player_overflow_button" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/yt_outline_overflow_vertical_white_24" android:scaleType="center" android:layout_alignWithParentIfMissing="true" android:contentDescription="@string/accessibility_context_menu" android:layout_toStartOf="@+id/hide_controls_button" style="@style/MusicPlayerButton"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/player_additional_view_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignWithParentIfMissing="true" android:layout_toStartOf="@+id/player_overflow_button"/>
            <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/player_learn_more_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:text="@string/ad_learn_more" android:shadowColor="#7f000000" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="0.01" android:layout_alignParentTop="true" android:layout_alignWithParentIfMissing="true" android:paddingStart="4dp" android:paddingEnd="8dp" android:layout_marginEnd="2dp" android:layout_toStartOf="@+id/player_additional_view_container" style="@style/PlayerButton"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/playback_controls" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:layoutDirection="ltr">
            <FrameLayout android:layout_gravity="center_vertical" android:id="@+id/dislike_button_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.google.android.libraries.youtube.common.ui.TouchImageView android:id="@+id/dislike_button" android:padding="@dimen/remix_overlay_player_control_button_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ytdislike_drawable" android:contentDescription="@string/accessibility_dislike_video" style="@style/MusicPlayerButton"/>
            </FrameLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/playback_controls_spacing">
                <com.google.android.libraries.youtube.common.ui.TouchImageView android:layout_gravity="center_vertical" android:id="@+id/player_control_rewind_button" android:padding="@dimen/remix_overlay_player_control_button_padding" android:layout_width="@dimen/remix_overlay_player_control_button_size" android:layout_height="@dimen/remix_overlay_player_control_button_size" android:layout_marginBottom="@dimen/item_medium_spacing" android:src="@drawable/quantum_ic_fast_rewind_white_24" android:scaleType="center" android:contentDescription="@string/accessibility_rewind" style="@style/MusicPlayerButton"/>
                <com.google.android.libraries.youtube.common.ui.TouchImageView android:id="@+id/player_control_previous_button" android:padding="@dimen/remix_overlay_player_control_button_padding" android:layout_width="@dimen/remix_overlay_player_control_button_size" android:layout_height="@dimen/remix_overlay_player_control_button_size" android:src="@drawable/music_player_prev" android:contentDescription="@string/accessibility_previous" style="@style/MusicPlayerButton"/>
            </LinearLayout>
            <com.google.android.libraries.youtube.common.ui.TouchImageView android:layout_gravity="center_vertical" android:id="@+id/player_control_play_pause_replay_button" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="@dimen/remix_overlay_play_button_size" android:layout_height="@dimen/remix_overlay_play_button_size" android:contentDescription="@string/accessibility_play" android:layout_marginStart="@dimen/playback_controls_spacing" android:layout_marginEnd="@dimen/playback_controls_spacing"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/playback_controls_spacing">
                <com.google.android.libraries.youtube.common.ui.TouchImageView android:layout_gravity="center_vertical" android:id="@+id/player_control_fast_forward_button" android:padding="@dimen/remix_overlay_player_control_button_padding" android:layout_width="@dimen/remix_overlay_player_control_button_size" android:layout_height="@dimen/remix_overlay_player_control_button_size" android:layout_marginBottom="@dimen/item_medium_spacing" android:src="@drawable/quantum_ic_fast_forward_white_24" android:scaleType="center" android:contentDescription="@string/accessibility_fast_forward" style="@style/MusicPlayerButton"/>
                <com.google.android.libraries.youtube.common.ui.TouchImageView android:layout_gravity="center_vertical" android:id="@+id/player_control_next_button" android:padding="@dimen/remix_overlay_player_control_button_padding" android:layout_width="@dimen/remix_overlay_player_control_button_size" android:layout_height="@dimen/remix_overlay_player_control_button_size" android:src="@drawable/music_player_next" android:contentDescription="@string/accessibility_next" style="@style/MusicPlayerButton"/>
            </LinearLayout>
            <FrameLayout android:layout_gravity="center_vertical" android:id="@+id/like_button_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.google.android.libraries.youtube.common.ui.TouchImageView android:id="@+id/like_button" android:padding="@dimen/remix_overlay_player_control_button_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ytlike_drawable" android:contentDescription="@string/accessibility_like_video" style="@style/MusicPlayerButton"/>
            </FrameLayout>
        </LinearLayout>
        <ProgressBar android:id="@+id/player_loading_view" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:layout_centerInParent="true" style="?android:attr/progressBarStyle"/>
        <RelativeLayout android:id="@+id/player_bottom_ui_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <RelativeLayout android:id="@+id/time_bar_container" android:layout_width="match_parent" android:layout_height="@dimen/controls_overlay_timebar_height" android:layout_toStartOf="@+id/fullscreen_button_container" android:layout_alignParentStart="true">
                <FrameLayout android:id="@+id/current_time_container" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerVertical="true" android:layout_alignParentStart="true">
                    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:layout_gravity="center_vertical" android:id="@+id/live_label" android:contentDescription="@string/live_label" android:textAlignment="center" style="@style/PlayerLiveBadge"/>
                    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/extra_small_font_size" android:textStyle="normal" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/time_bar_current_time" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxLines="1" android:drawablePadding="8dp" android:layout_marginStart="@dimen/item_medium_spacing" android:layout_marginEnd="@dimen/item_small_spacing"/>
                </FrameLayout>
                <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/extra_small_font_size" android:textStyle="normal" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/time_bar_total_time" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxLines="1" android:layout_centerVertical="true" android:layout_marginStart="@dimen/item_small_spacing" android:layout_alignParentEnd="true"/>
                <Space android:id="@+id/time_bar_reference_view" android:layout_width="0dp" android:layout_height="match_parent" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true" android:layout_toStartOf="@+id/time_bar_total_time" android:layout_toEndOf="@+id/current_time_container"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/fullscreen_button_container" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentEnd="true">
                <com.google.android.libraries.youtube.common.ui.TouchImageView android:id="@+id/enter_fullscreen_button" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/yt_outline_screen_full_white_24" android:scaleType="center" android:contentDescription="@string/accessibility_enter_fullscreen" style="@style/MusicPlayerButton"/>
                <com.google.android.libraries.youtube.common.ui.TouchImageView android:id="@+id/exit_fullscreen_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/yt_outline_screen_full_exit_white_24" android:scaleType="center" android:contentDescription="@string/accessibility_exit_fullscreen" style="@style/MusicPlayerButton"/>
            </FrameLayout>
        </RelativeLayout>
        <FrameLayout android:id="@+id/audio_video_switch_button_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/item_small_spacing" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/item_small_spacing" android:layout_alignParentStart="true"/>
        <FrameLayout android:id="@+id/mpp_player_overlay_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
    <include layout="@layout/music_playback_error_overlay"/>
    <include layout="@layout/quick_seek_overlay"/>
</FrameLayout>
