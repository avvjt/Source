<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:yt="http://schemas.android.com/apk/res-auto" android:id="@+id/swipe_foreground" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include android:id="@+id/thumbnail_frame" android:layout_width="@dimen/music_list_video_list_index_width" android:layout_height="@dimen/music_list_video_list_index_width" android:layout_marginTop="@dimen/item_medium_spacing" android:layout_marginBottom="@dimen/item_medium_spacing" android:layout_centerVertical="true" android:layout_marginStart="@dimen/item_large_spacing" android:layout_marginEnd="@dimen/item_large_spacing" android:layout_alignParentStart="true" layout="@layout/music_list_item_thumbnail_frame"/>
    <ImageView android:id="@+id/contextual_menu_anchor" android:background="@drawable/ripple" android:paddingTop="@dimen/music_overflow_button_vertical_padding" android:paddingBottom="@dimen/music_overflow_button_vertical_padding" android:visibility="gone" android:layout_width="@dimen/music_overflow_button_plus_horizontal_padding_size" android:layout_height="@dimen/music_overflow_button_plus_vertical_padding_size" android:src="@drawable/yt_outline_overflow_vertical_white_24" android:tint="@color/ytm_icon_color_active" android:layout_centerVertical="true" android:contentDescription="@string/accessibility_context_menu" android:paddingStart="@dimen/music_overflow_button_horizontal_padding" android:paddingEnd="@dimen/music_overflow_button_horizontal_padding" android:layout_alignParentEnd="true"/>
    <RelativeLayout android:id="@+id/text_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true" android:layout_toStartOf="@+id/contextual_menu_anchor" android:layout_toEndOf="@+id/thumbnail_frame">
        <LinearLayout android:orientation="horizontal" android:id="@+id/title_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="@style/TextAppearance.YouTubeMusic.Title2" android:ellipsize="end" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:textAlignment="viewStart"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/subtitle_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_container">
            <android.support.v7.widget.AppCompatImageView android:layout_gravity="center" android:id="@+id/offline_badge" android:visibility="gone" android:layout_width="@dimen/music_small_icon_size" android:layout_height="@dimen/music_small_icon_size" android:layout_marginTop="@dimen/music_list_item_badge_container_padding_top" android:src="@drawable/ic_offlined" android:layout_marginEnd="@dimen/item_extra_small_spacing" yt:tint="@color/ytm_color_grey_05" yt:tintMode="src_in"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/subtitle_badges_container" android:paddingTop="@dimen/music_list_item_badge_container_padding_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:divider="@drawable/badge_container_space_divider" android:showDividers="end|middle"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="@style/TextAppearance.YouTubeMusic.Subtitle1" android:ellipsize="end" android:id="@+id/subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
