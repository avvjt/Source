                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout android:id="@+id/thumbnail_overlay_parent" android:layout_width="@dimen/two_column_item_image_size" android:layout_height="@dimen/two_column_item_image_size" android:layout_centerVertical="true" android:layout_marginStart="@dimen/two_column_item_horizontal_padding" android:layout_alignParentStart="true"/>
    </RelativeLayout>
</com.google.android.libraries.youtube.common.ui.swipelayout.SwipeLayout>
