                <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="@color/ytm_text_color_primary" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/list_index" android:visibility="gone" android:layout_width="@dimen/two_column_item_list_index_width" android:layout_height="@dimen/two_column_item_image_size" android:layout_marginTop="@dimen/two_column_item_vertical_padding" android:layout_marginBottom="@dimen/two_column_item_vertical_padding" yt:robotoFont="6"/>
                <FrameLayout android:id="@+id/thumbnail_parent" android:layout_width="@dimen/two_column_item_image_size" android:layout_height="@dimen/two_column_item_image_size" android:layout_marginTop="@dimen/two_column_item_vertical_padding" android:layout_marginBottom="@dimen/two_column_item_vertical_padding"/>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/custom_index_column_container" android:visibility="gone" android:layout_width="@dimen/music_custom_index_column_container_width" android:layout_height="@dimen/two_column_item_image_size" android:layout_marginStart="@dimen/item_extra_small_spacing" android:layout_marginEnd="@dimen/item_extra_small_spacing"/>
