            <LinearLayout android:orientation="vertical" android:id="@+id/details_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toStartOf="@+id/contextual_menu_container" android:layout_toEndOf="@+id/thumbnail_index_container">
