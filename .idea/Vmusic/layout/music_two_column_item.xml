<?xml version="1.0" encoding="utf-8"?>
<com.google.android.libraries.youtube.common.ui.swipelayout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:yt="http://schemas.android.com/apk/res-auto" android:id="@+id/swipe_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/two_column_item_content_parent" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/two_column_item_content" android:layout_width="match_parent" android:layout_height="wrap_content">
