<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ff13b8e8" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/wazeNavBarNavigationLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp">
        <FrameLayout android:id="@+id/wazeNavBarInstructionLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginRight="9dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginStart="7dp" android:layout_marginEnd="9dp" android:layout_alignParentStart="true">
            <ImageView android:layout_gravity="center" android:id="@+id/wazeNavBarInstruction" android:padding="5dp" android:layout_width="50dp" android:layout_height="50dp"/>
            <TextView android:textSize="10sp" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@+id/wazeNavBarRoundaboutExitNumber" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
        <ImageView android:id="@+id/wazeIcon" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:src="@drawable/audio_banner_app_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="20sp" android:textColor="@android:color/white" android:id="@+id/wazeNavBarDistance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_toRightOf="@+id/wazeNavBarInstructionLayout" android:layout_centerVertical="true" android:fontFamily="sans-serif-black" android:layout_marginEnd="15dp" android:layout_toEndOf="@+id/wazeNavBarInstructionLayout"/>
        <TextView android:textSize="20sp" android:textColor="@android:color/white" android:id="@+id/wazeNavBarStreetName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_toLeftOf="@+id/wazeIcon" android:layout_toRightOf="@+id/wazeNavBarDistance" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium" android:layout_toStartOf="@+id/wazeIcon" android:layout_toEndOf="@+id/wazeNavBarDistance"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/wazeNavBarGeneralLayout" android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="10dp" android:layout_marginTop="13dp" android:src="@drawable/audio_banner_app_icon" android:layout_alignParentLeft="true" android:layout_marginStart="10dp" android:layout_alignParentStart="true"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@android:color/white" android:id="@+id/wazeNavBarStartWazeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/waze_nav_bar_start_waze" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/wazeNavBarStartWazeDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/waze_nav_bar_see_waze_direction" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <ImageView android:id="@+id/wazeNavBarCloseButton" android:padding="15dp" android:layout_width="45dp" android:layout_height="match_parent" android:src="@drawable/audio_banner_app_close" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:alpha="0.5" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</FrameLayout>
