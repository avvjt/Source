<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/rippleColor">
    <item>
        <layer-list>
            <item android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/buttonElevatedBackground"/>
                    <corners android:radius="@dimen/corner_radius_medium"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="0.5dp" android:color="@color/border"/>
                    <corners android:radius="6dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
