<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/rippleColor">
    <item android:id="@android:id/background">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/borderPrimary"/>
                    <corners android:radius="@dimen/corner_radius_medium"/>
                </shape>
            </item>
            <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/backgroundElevatedTertiary"/>
                    <corners android:radius="@dimen/corner_radius_medium"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
