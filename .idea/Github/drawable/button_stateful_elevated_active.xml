<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/rippleColor">
    <item>
        <layer-list>
            <item android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/buttonElevatedActiveBackground"/>
                    <corners android:radius="@dimen/corner_radius_medium"/>
                </shape>
            </item>
            <item android:height="12dp" android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#09000000" android:endColor="#00000000" android:angle="-90" android:centerY="0.25" android:centerColor="#00000000"/>
                    <corners android:radius="6dp"/>
                </shape>
            </item>
            <item android:width="12dp" android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#09000000" android:endColor="#00000000" android:angle="0" android:centerY="0.2" android:centerColor="#00000000"/>
                    <corners android:radius="6dp"/>
                </shape>
            </item>
            <item android:gravity="end" android:width="12dp" android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#09000000" android:endColor="#00000000" android:angle="180" android:centerY="0.2" android:centerColor="#00000000"/>
                    <corners android:radius="6dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="0.5dp" android:color="@color/border"/>
                    <corners android:radius="6dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
