<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:outlook="http://schemas.android.com/apk/res-auto" android:background="@color/outlook_app_surface_primary" android:paddingTop="16dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/outlook_content_inset" android:paddingEnd="12dp">
    <ImageButton android:id="@+id/close" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_dismiss_24_regular" android:layout_alignParentTop="true" android:contentDescription="@string/close_notification_content_description" android:layout_alignParentEnd="true" outlook:tint="?attr/grey300"/>
    <ImageView android:id="@+id/icon" android:layout_width="@dimen/list_item_icon_size" android:layout_height="@dimen/list_item_icon_size" android:layout_marginTop="4dp" android:src="@drawable/ic_fluent_heart_24_regular" android:layout_alignParentTop="true" android:importantForAccessibility="no" android:layout_marginStart="8dp" android:layout_alignParentStart="true" outlook:tint="?attr/dangerPrimary"/>
    <TextView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/floodgate_prompt_title" android:layout_alignParentTop="true" android:layout_marginStart="24dp" android:layout_toStartOf="@+id/close" android:layout_toEndOf="@+id/icon" style="@style/TextAppearance.Outlook.SubHeading2"/>
    <TextView android:textColor="?android:attr/textColorSecondary" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/floodgate_prompt_subtitle" android:layout_below="@+id/title" android:layout_marginStart="24dp" android:layout_toStartOf="@+id/close" android:layout_toEndOf="@+id/icon" style="@style/TextAppearance.Outlook.Body1"/>
    <Button android:id="@+id/btn_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="0dp" android:text="@string/no_thanks" android:maxLines="1" android:layout_below="@+id/subtitle" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/icon" style="?attr/outlookAccentBorderlessButtonStyle"/>
    <Button android:id="@+id/btn_yes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="0dp" android:text="@string/sure" android:maxLines="1" android:layout_below="@+id/subtitle" android:layout_toEndOf="@+id/btn_no" style="?attr/outlookAccentBorderlessButtonStyle"/>
</RelativeLayout>
