<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TextView android:textSize="9sp" android:textColor="@color/danger_primary" android:gravity="center" android:id="@+id/debugInfo" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="200dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:maxLines="5"/>
        <ImageButton android:id="@+id/close" android:background="@drawable/item_background_circular" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_dismiss_28_filled" android:layout_centerVertical="true" android:contentDescription="@string/close" android:layout_marginStart="8dp" android:layout_alignParentStart="true" app:tint="@color/commute_button_icon_tint_selector"/>
        <ImageButton android:id="@+id/right_action" android:background="@drawable/item_background_circular" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_headphones_28_filled" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true" android:contentDescription="@string/commute_action_switch_audio" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/context_menu_button"/>
        <ImageButton android:id="@+id/context_menu_button" android:background="@drawable/item_background_circular" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_more_horizontal_28_filled" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_alignParentEnd="true" app:tint="@color/commute_button_icon_tint_selector"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/tooltip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="-6dp" android:layout_toStartOf="@+id/right_action">
            <TextView android:textColor="@color/outlook_accent_text_selector" android:layout_gravity="center_vertical" android:background="@drawable/bg_commute_car_mode_tooltip" android:paddingLeft="8dp" android:paddingTop="3dp" android:paddingRight="8dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/car_mode_preferences" android:backgroundTint="@color/commute_avatar_background_selector"/>
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_vertical" android:id="@+id/tooltip_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical" android:id="@+id/layout_body" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="9">
        <FrameLayout android:orientation="vertical" android:id="@+id/fragment_container" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <FrameLayout android:orientation="vertical" android:id="@+id/controller_container" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
