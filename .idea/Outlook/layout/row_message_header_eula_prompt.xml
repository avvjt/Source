<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:outlook="http://schemas.android.com/apk/res-auto" android:background="@color/outlook_app_surface_primary" android:paddingTop="16dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/outlook_content_inset" android:paddingEnd="12dp">
    <ImageButton android:id="@+id/close" android:background="@drawable/item_background_circular" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_dismiss_24_regular" android:layout_alignParentTop="true" android:contentDescription="@string/close_notification_content_description" android:layout_alignParentEnd="true" outlook:tint="?attr/grey300"/>
    <ImageView android:id="@+id/icon" android:layout_width="@dimen/list_item_icon_size" android:layout_height="@dimen/list_item_icon_size" android:layout_marginTop="4dp" android:src="@drawable/ic_fluent_info_24_regular" android:layout_alignParentTop="true" android:importantForAccessibility="no" android:layout_marginStart="8dp" android:layout_alignParentStart="true"/>
