    <Button android:id="@+id/btn_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="0dp" android:text="@string/eula_dismiss" android:maxLines="1" android:layout_below="@+id/title" android:layout_toEndOf="@+id/btn_left" style="?attr/outlookAccentBorderlessButtonStyle"/>
</RelativeLayout>
