<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/person_root_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar android:layout_gravity="center" android:id="@+id/loading_progress_bar" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Widget.Outlook.ProgressBar.Large.Accent"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/people_list_layout" android:background="@color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@drawable/clp_divider" android:showDividers="middle">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/filters_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.microsoft.office.outlook.uikit.widget.LabelGroupLayout android:id="@+id/filters" android:paddingTop="@dimen/outlook_content_inset" android:paddingBottom="@dimen/outlook_content_inset" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="@dimen/outlook_content_inset"/>
            <ImageView android:id="@+id/filter_dismiss_icon" android:background="@drawable/item_background_circular" android:padding="@dimen/outlook_content_inset" android:layout_width="52dp" android:layout_height="52dp" android:src="@drawable/ic_fluent_dismiss_circle_20_filled" android:contentDescription="@string/close_filter_content_description" app:tint="@color/contacts_filter_dismiss_icon_tint"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/people_list_recyclerview" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </LinearLayout>
    <com.microsoft.office.outlook.illustration.IllustrationStateView android:id="@+id/people_empty_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" app:illustration="@drawable/illustration_people" app:title="@string/empty_contacts_message"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:layout_gravity="end|bottom" android:id="@+id/floating_add_new_contact" android:layout_marginBottom="@dimen/outlook_content_inset" android:src="@drawable/ic_fluent_add_24_filled" android:layout_alignParentBottom="true" android:contentDescription="@string/add_new_contact" android:layout_marginEnd="@dimen/outlook_content_inset" android:layout_alignParentEnd="true" style="@style/Widget.Outlook.FloatingActionButton"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
