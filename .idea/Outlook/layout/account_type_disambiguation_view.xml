<?xml version="1.0" encoding="utf-8"?>
<com.microsoft.authentication.internal.AccountTypeDisambiguationView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/complete_disambiguation_view" style="@style/oneauth_root_view_style">
    <ScrollView android:gravity="top" android:layout_gravity="top" android:id="@+id/disambiguation_scrollview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/disambiguation_view" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/oneauth_microsoft_logo" style="@style/oneauth_microsoft_logo_style"/>
            <TextView android:id="@+id/disambiguation_title" style="@style/oneauth_heading_text_style"/>
            <TextView android:id="@+id/disambiguation_desc" android:layout_marginTop="12dp" style="@style/oneauth_textview_default_style"/>
            <RelativeLayout android:id="@+id/work_account_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <ImageView android:id="@+id/work_account_logo" android:src="@drawable/work_or_school_button" style="@style/oneauth_disambiguation_picker_entry_logo_style"/>
                <TextView android:id="@+id/work_account_title" android:layout_alignTop="@+id/work_account_logo" android:layout_toEndOf="@+id/work_account_logo" style="@style/oneauth_disambiguation_picker_entry_title_style"/>
                <TextView android:id="@+id/work_account_desc" android:layout_below="@+id/work_account_title" android:layout_toEndOf="@+id/work_account_logo" style="@style/oneauth_disambiguation_picker_entry_description_style"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/personal_account_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <ImageView android:id="@+id/personal_account_logo" android:src="@drawable/personal_button" style="@style/oneauth_disambiguation_picker_entry_logo_style"/>
                <TextView android:id="@+id/personal_account_title" android:layout_alignTop="@+id/personal_account_logo" android:layout_toEndOf="@+id/personal_account_logo" style="@style/oneauth_disambiguation_picker_entry_title_style"/>
                <TextView android:id="@+id/personal_account_desc" android:layout_below="@+id/personal_account_title" android:layout_toEndOf="@+id/personal_account_logo" style="@style/oneauth_disambiguation_picker_entry_description_style"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/copyright_privacy_common"/>
</com.microsoft.authentication.internal.AccountTypeDisambiguationView>
