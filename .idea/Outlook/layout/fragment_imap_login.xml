<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:outlook="http://schemas.android.com/apk/res-auto" android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@drawable/horizontal_divider" android:showDividers="middle">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/text_input_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/simple_login_hint_email" style="@style/Widget.Outlook.TextInputLayout.Large">
                <EditText android:id="@+id/edit_text_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textEmailAddress" android:contentDescription="@string/simple_login_hint_email" style="@style/Widget.Outlook.TextInputLayout.EditText.Large"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.microsoft.office.outlook.uikit.widget.PasswordTextInputLayout android:id="@+id/text_input_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" outlook:password_hint_text="@string/simple_login_hint_password" outlook:text_input_style="@style/Widget.Outlook.TextInputLayout.EditText.Large"/>
            <TextView android:layout_gravity="start" android:id="@+id/btn_auth_password_hint" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_marginStart="4dp"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/text_input_display_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="@string/simple_login_hint_display_name" style="@style/Widget.Outlook.TextInputLayout.Large">
                <EditText android:id="@+id/edit_text_display_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/simple_login_hint_display_name" style="@style/Widget.Outlook.TextInputLayout.EditText.Large"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/text_input_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="@string/simple_login_hint_description" style="@style/Widget.Outlook.TextInputLayout.Large">
                <EditText android:id="@+id/edit_text_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/simple_login_hint_description" style="@style/Widget.Outlook.TextInputLayout.EditText.Large"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/container_advanced_login" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="?attr/colorAccent" android:id="@+id/imap_pop_host_section_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/imap_auth_imap_incoming" android:fontFamily="sans-serif-medium"/>
                <com.microsoft.office.outlook.uikit.widget.PartitionedTextInputLayout android:id="@+id/text_input_imap_host_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" outlook:hint_text_1="@string/imap_auth_imap_host_name_hint" outlook:hint_text_2="@string/auth_port_value_hint" outlook:input_type="0"/>
                <com.microsoft.office.outlook.uikit.widget.MaterialDropDownView android:id="@+id/incoming_port_security_type_layout" android:layout_width="match_parent" android:layout_height="wrap_content" outlook:dropdown_hint_text="@string/security_type"/>
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/text_input_imap_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="@string/imap_auth_imap_username_hint" style="@style/Widget.Outlook.TextInputLayout.Large">
                    <EditText android:id="@+id/edit_text_imap_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/imap_auth_imap_username_hint" style="@style/Widget.Outlook.TextInputLayout.EditText.Large"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.microsoft.office.outlook.uikit.widget.PasswordTextInputLayout android:id="@+id/text_input_imap_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" outlook:password_hint_text="@string/imap_auth_imap_password_hint" outlook:text_input_style="@style/Widget.Outlook.TextInputLayout.EditText.Large"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/pop_config_delete_messages_from_server_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textColor="?attr/colorAccent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/sync_pop_leave_message_on_server" android:fontFamily="sans-serif-medium"/>
                    <Switch android:textColor="?android:attr/textColorTertiary" android:gravity="start|center_vertical" android:id="@+id/pop_config_delete_messages_from_server_switch" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/list_item_row_min_height" android:text="@string/sync_pop_leave_message_on_server_summary"/>
                </LinearLayout>
                <TextView android:textColor="?attr/colorAccent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/imap_auth_smtp_outgoing" android:fontFamily="sans-serif-medium"/>
                <com.microsoft.office.outlook.uikit.widget.PartitionedTextInputLayout android:id="@+id/text_input_smtp_host_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" outlook:hint_text_1="@string/imap_auth_smtp_host_name_hint" outlook:hint_text_2="@string/auth_port_value_hint" outlook:input_type="0"/>
                <com.microsoft.office.outlook.uikit.widget.MaterialDropDownView android:id="@+id/outgoing_port_security_type_layout" android:layout_width="match_parent" android:layout_height="wrap_content" outlook:dropdown_hint_text="@string/security_type"/>
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/text_input_smtp_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="@string/imap_auth_smtp_username_hint" style="@style/Widget.Outlook.TextInputLayout.Large">
                    <EditText android:id="@+id/edit_text_smtp_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/imap_auth_smtp_username_hint" style="@style/Widget.Outlook.TextInputLayout.EditText.Large"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.microsoft.office.outlook.uikit.widget.PasswordTextInputLayout android:id="@+id/text_input_smtp_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" outlook:password_hint_text="@string/imap_auth_smtp_password_hint" outlook:text_input_style="@style/Widget.Outlook.TextInputLayout.EditText.Large"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Switch android:textColor="?android:attr/textColorTertiary" android:gravity="start|center_vertical" android:id="@+id/btn_show_advanced" android:background="?attr/selectableItemBackground" android:paddingLeft="20dp" android:paddingRight="@dimen/outlook_content_inset" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/simple_login_advanced_settings" android:paddingStart="20dp" android:paddingEnd="@dimen/outlook_content_inset" style="?attr/outlookAccentBorderlessButtonStyle"/>
</LinearLayout>
