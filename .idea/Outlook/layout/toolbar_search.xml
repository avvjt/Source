<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:outlook="http://schemas.android.com/apk/res-auto" android:id="@+id/search_group">
    <FrameLayout android:layout_gravity="center" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="match_parent">
        <com.acompli.acompli.ui.search.SearchToolbarIconAnchor android:id="@+id/start_button_anchor" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="match_parent"/>
        <ImageButton android:id="@+id/search_btn" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_fluent_search_24_regular" android:contentDescription="@string/search" android:paddingEnd="20dp" android:layout_marginEnd="12dp" outlook:tint="@color/search_icon_tint_color_tablet_selector" style="?attr/actionButtonStyle"/>
        <com.microsoft.office.outlook.uiappcomponent.widget.account.AccountPickerView android:id="@+id/account_spinner" android:background="@null" android:visibility="gone" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="match_parent" android:popupBackground="@drawable/popup_menu_background_light" android:contentDescription="@string/content_description_search_selected_account" outlook:popupTheme="@style/ThemeOverlay.Outlook.Popup"/>
    </FrameLayout>
    <FrameLayout android:duplicateParentState="true" android:layout_width="0dp" android:layout_height="@dimen/search_edit_container_height" android:layout_weight="1" android:layout_marginStart="8dp">
        <com.acompli.acompli.ui.search.SearchAutoCompleteTextView android:theme="@style/ThemeOverlay_Outlook_SearchEditText_Tablet" android:ellipsize="end" android:id="@+id/search_edit_text" android:visibility="gone" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/search_hint" android:maxLines="1" android:completionHintView="@layout/row_search_item_suggestion" android:popupBackground="@drawable/search_suggestions_popup_background" android:dropDownWidth="match_parent" android:importantForAccessibility="yes" outlook:popupTheme="@style/ThemeOverlay.Outlook.Popup" style="@style/SearchEditText_Tablet"/>
        <TextView android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/search_zero_query_text" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/search_hint" android:maxLines="1" android:contentDescription="@string/search_hint_accessibility" style="@style/SearchZeroQueryEditHint"/>
    </FrameLayout>
    <FrameLayout android:layout_gravity="center" android:duplicateParentState="true" android:layout_width="34dp" android:layout_height="34dp" android:layout_marginEnd="7dp">
        <ProgressBar android:id="@+id/search_progress" android:paddingTop="0.6dp" android:visibility="invisible" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="match_parent" android:indeterminate="true" android:importantForAccessibility="no" android:indeterminateTint="@color/search_progress_tint_color_tablet_selector" android:indeterminateTintMode="src_in" style="?android:attr/progressBarStyle"/>
        <ImageButton android:id="@+id/search_cancel_btn" android:visibility="gone" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_fluent_dismiss_circle_24_filled" android:contentDescription="@string/clear_search" android:tintMode="src_in" outlook:tint="@color/search_progress_tint_color_tablet_selector" style="?attr/actionButtonStyle"/>
        <ImageButton android:layout_gravity="center_vertical" android:id="@+id/voice_search_btn" android:visibility="gone" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_fluent_mic_on_24_regular" android:contentDescription="@string/voice_search_btn_content_description" android:paddingStart="12dp" android:paddingEnd="12dp" outlook:tint="@color/search_icon_tint_color_tablet_selector" style="?attr/actionButtonStyle"/>
    </FrameLayout>
</merge>
