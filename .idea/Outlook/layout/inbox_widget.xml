<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:outlook="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@drawable/bg_widget_all" android:padding="@dimen/widget_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/bg_widget_header_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/widget_main_banner_min_height">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/inbox_folder_and_account_container" android:background="@drawable/item_background" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="@dimen/inbox_widget_inbox_title_start_padding">
            <TextView android:textAppearance="@style/TextAppearance.Outlook.SubHeading" android:textStyle="bold" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/inbox_folder_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:fontFamily="sans-serif-medium"/>
            <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:textColor="@color/white_with_opacity_80" android:ellipsize="end" android:id="@+id/inbox_account" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false"/>
        </LinearLayout>
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:textColor="@color/outlook_app_on_primary" android:gravity="center" android:layout_gravity="center" android:id="@+id/inbox_unread_counter" android:background="@drawable/inbox_widget_thread_count_background" android:padding="@dimen/inbox_widget_unread_counter_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/inbox_widget_unread_counter_min_width" android:includeFontPadding="false" android:layout_marginStart="@dimen/inbox_widget_inbox_unread_count_start_padding"/>
        <ImageView android:id="@+id/inbox_compose_button" android:background="@drawable/item_background" android:padding="12dp" android:visibility="visible" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_fluent_compose_24_filled" android:tint="@android:color/white" android:contentDescription="@string/compose_inbox_widget_description"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/widget_empty" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="@dimen/inbox_empty_state_image_size" android:layout_height="@dimen/inbox_empty_state_image_size" android:src="@drawable/illustration_balloon"/>
            <TextView android:textAppearance="@style/TextAppearance.Outlook.SubHeading" android:textColor="@color/outlook_app_primary_text" android:ellipsize="end" android:layout_gravity="center_horizontal" android:background="@drawable/item_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/inbox_widget_main_banner_end_padding_v2" android:text="@string/all_done" android:maxLines="1" android:includeFontPadding="false"/>
            <TextView android:textAppearance="@style/TextAppearance.Outlook.Body2" android:textColor="@color/com_primary" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@+id/view_inbox" android:background="@drawable/item_background" android:padding="@dimen/inbox_widget_view_all_message_top_bottom_padding_v2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_inbox" android:maxLines="1" android:includeFontPadding="false" outlook:textAllCaps="true"/>
        </LinearLayout>
        <ListView android:id="@+id/inbox_widget_list_view" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@drawable/vertical_divider" android:dividerHeight="@dimen/outlook_divider_height"/>
    </FrameLayout>
</LinearLayout>
