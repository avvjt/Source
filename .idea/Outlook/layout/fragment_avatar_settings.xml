<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/parent_view" android:tag="@string/tag_edge_to_edge" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingHorizontal="10dp">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
        <com.google.android.material.imageview.ShapeableImageView android:id="@+id/avatar_image" android:layout_width="@dimen/settings_avatar_circle_size" android:layout_height="@dimen/settings_avatar_circle_size" android:layout_marginTop="10dp" app:shapeAppearanceOverlay="@style/CircleImageView"/>
        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:id="@+id/account_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/settings_avatar_account_name" android:inputType="text" android:imeOptions="actionDone" android:autofillHints="name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView android:gravity="start" android:paddingTop="@dimen/list_item_row_padding_top" android:paddingBottom="@dimen/list_item_row_padding_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:text="@string/settings_avatar_local_only" android:textAlignment="viewStart" android:paddingEnd="@dimen/outlook_content_inset" style="@style/ListItem.Summary"/>
        <TextView android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/settings_avatar_system_icons" android:layout_weight="1" android:paddingStart="0dp" android:layout_marginStart="0dp" style="@style/ListItem.Header"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
            <com.google.android.material.imageview.ShapeableImageView android:id="@+id/profile_picture_view" android:padding="4dp" android:layout_width="50dp" android:layout_height="50dp" android:contentDescription="@string/accessibility_avatar_profile_picture" android:layout_marginEnd="8dp" app:shapeAppearanceOverlay="@style/CircleImageView" app:strokeColor="?attr/colorAccent"/>
            <com.google.android.material.imageview.ShapeableImageView android:id="@+id/ss_icon_view" android:padding="4dp" android:layout_width="50dp" android:layout_height="50dp" android:contentDescription="@string/accessibility_avatar_account_type" android:layout_marginEnd="8dp" app:contentPadding="8dp" app:shapeAppearanceOverlay="@style/CircleImageView" app:strokeColor="?attr/colorAccent"/>
            <com.google.android.material.imageview.ShapeableImageView android:id="@+id/aad_icon_view" android:background="@color/avatar_aad_logo_background" android:padding="4dp" android:layout_width="50dp" android:layout_height="50dp" android:contentDescription="@string/accessibility_avatar_aad_logo" app:shapeAppearanceOverlay="@style/CircleImageView" app:strokeColor="?attr/colorAccent"/>
        </LinearLayout>
        <TextView android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/settings_avatar_icons" android:layout_weight="1" android:paddingStart="0dp" android:layout_marginStart="0dp" style="@style/ListItem.Header"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/icon_grid" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:overScrollMode="never"/>
        <View android:background="@color/grey300" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginVertical="10dp"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/color_grid" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="30dp" android:overScrollMode="never"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
