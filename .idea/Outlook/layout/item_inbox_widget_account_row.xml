<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/account" android:background="@drawable/item_background" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/account_icon" android:layout_width="@dimen/inbox_widget_account_icon_size" android:layout_height="@dimen/inbox_widget_account_icon_size" android:contentDescription="@string/account_type_icon" android:layout_marginStart="@dimen/inbox_widget_inbox_title_start_padding_v2"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/account_details" android:layout_width="0dp" android:layout_height="@dimen/inbox_widget_configuration_switch_height" android:layout_weight="1" android:layout_marginStart="@dimen/inbox_widget_account_detail_margin">
        <TextView android:textAppearance="@style/TextAppearance.Outlook.SubHeading" android:ellipsize="end" android:id="@+id/account_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:includeFontPadding="false"/>
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:textColor="?android:attr/textColorSecondary" android:ellipsize="end" android:id="@+id/account_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/inbox_widget_unread_counter_padding_v2" android:maxLines="1" android:singleLine="true" android:includeFontPadding="false"/>
    </LinearLayout>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginEnd="@dimen/inbox_widget_inbox_title_start_padding_v2">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/tick" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_checkmark_24_regular" android:tint="?attr/colorAccent"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/lock" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_lock_shield_24_regular" android:tint="?attr/colorControlNormal"/>
    </FrameLayout>
</LinearLayout>
