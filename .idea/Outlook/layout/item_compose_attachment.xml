<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/item_background" android:paddingLeft="@dimen/outlook_content_inset" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/list_item_row_min_height" android:paddingStart="@dimen/outlook_content_inset" android:paddingEnd="12dp">
        <ImageView android:id="@+id/attachment_item_icon" android:src="@drawable/ic_file_blank" style="@style/ListItem.Icon"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textAppearance="@style/TextAppearance.Outlook.Caption" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="@dimen/list_item_row_min_height" android:layout_weight="1" android:animateLayoutChanges="true">
            <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:ellipsize="middle" android:layout_gravity="center_vertical" android:id="@+id/attachment_item_filename" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginEnd="4dp"/>
            <TextView android:textAppearance="@style/TextAppearance.Outlook.Caption" android:textColor="?android:attr/textColorSecondary" android:ellipsize="none" android:layout_gravity="center_vertical" android:id="@+id/attachment_item_file_size" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
        <ImageButton android:id="@+id/attachment_item_remove" android:background="?attr/selectableItemBackgroundBorderless" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_fluent_dismiss_24_regular" android:scaleType="centerInside" android:contentDescription="@string/remove_attachment_content_description" app:tint="?attr/grey400"/>
        <ImageButton android:id="@+id/attachment_item_click" android:background="?attr/selectableItemBackgroundBorderless" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_fluent_more_horizontal_24_regular" android:scaleType="centerInside" android:contentDescription="@string/click_image_attachment_content_description" app:tint="?attr/grey400"/>
    </LinearLayout>
    <com.google.android.material.progressindicator.LinearProgressIndicator android:id="@+id/attachment_progress" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:indeterminate="false" app:trackThickness="2dp"/>
</LinearLayout>
