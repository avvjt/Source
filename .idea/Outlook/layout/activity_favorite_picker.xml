<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:outlook="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/search_layout" android:focusableInTouchMode="true" android:descendantFocusability="beforeDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/search_favorites_toolbar" android:background="@drawable/bg_search_picker" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_weight="1" android:importantForAccessibility="no" android:transitionName="@string/transition_name_search_box">
                <ImageButton android:layout_gravity="center_vertical" android:id="@+id/back_button" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_fluent_arrow_left_24_regular" android:contentDescription="@string/back_button_description" android:layout_marginEnd="16dp" outlook:tint="@android:color/white" style="?attr/actionButtonStyle"/>
                <EditText android:textSize="16sp" android:textColor="@android:color/white" android:textColorHint="@android:color/white" android:id="@+id/search_edit_text" android:background="@null" android:layout_width="0dp" android:layout_height="@dimen/search_edit_container_height" android:hint="@string/search_favorites" android:maxLines="1" android:singleLine="true" android:freezesText="true" android:layout_weight="1" android:inputType="textNoSuggestions" android:imeOptions="flagNoExtractUi|actionSearch" android:textDirection="locale"/>
                <ImageButton android:id="@+id/search_cancel_btn" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_fluent_dismiss_circle_24_regular" android:contentDescription="@string/clear_search" outlook:tint="@android:color/white" style="?attr/actionButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <include android:layout_gravity="center" android:id="@+id/empty_search_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar" layout="@layout/empty_search"/>
</LinearLayout>
