                    <TextView android:textAppearance="@style/TextAppearance.Outlook.Caption" android:textColor="@color/white_with_opacity_60" android:ellipsize="end" android:id="@+id/email" android:background="@color/outlook_app_toolbar" android:paddingBottom="@dimen/inbox_widget_text_margin_left_v2" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:paddingStart="@dimen/inbox_widget_message_start_end_padding_v2" android:paddingEnd="@dimen/inbox_widget_message_start_end_padding_v2"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/other_emails_container" android:layout_width="match_parent" android:layout_height="wrap_content">
