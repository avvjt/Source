                    <ImageView android:layout_width="@dimen/inbox_widget_configuration_preview_width" android:layout_height="@dimen/inbox_widget_configuration_email_skeleton_height" android:src="@drawable/skeleton_email"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
