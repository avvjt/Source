            <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/shortcut_name_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/inbox_widget_inbox_title_start_padding_v2" android:layout_marginBottom="@dimen/inbox_widget_message_top_bottom_padding_v2" android:layout_marginStart="@dimen/inbox_widget_inbox_title_start_padding_v2" android:layout_marginEnd="@dimen/inbox_widget_inbox_title_start_padding_v2">
