        </LinearLayout>
    </ScrollView>
    <View android:background="@color/outlook_app_divider" android:layout_width="match_parent" android:layout_height="@dimen/inbox_widget_configuration_divider_height"/>
    <androidx.appcompat.widget.AppCompatButton android:textAppearance="@style/TextAppearance.Outlook.Body2" android:ellipsize="end" android:id="@+id/add_widget" android:padding="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp" android:text="@string/add_widget" android:maxLines="1" app:textAllCaps="true" style="@style/Widget.Outlook.Button.Accent"/>
</LinearLayout>
