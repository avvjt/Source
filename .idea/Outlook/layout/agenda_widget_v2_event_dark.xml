<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="horizontal" android:id="@+id/agenda_event_item_root" android:background="@drawable/widgets_list_background_selector" android:paddingTop="@dimen/agenda_widget_v2_event_cell_top_padding" android:paddingBottom="@dimen/agenda_widget_v2_event_cell_bottom_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/agenda_widget_v2_cell_min_height">
    <TextView android:id="@+id/margin_left" android:layout_width="@dimen/agenda_widget_v2_event_cell_root_padding" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/ongoing_event_indicator" android:visibility="gone" android:layout_width="@dimen/agenda_widget_v2_event_cell_root_padding" android:layout_height="wrap_content" android:drawableStart="@drawable/agendaview_carrot_indicator_automirrored"/>
    <ImageView android:id="@+id/icon" android:layout_width="@dimen/agenda_view_event_icon_size" android:layout_height="@dimen/agenda_view_event_icon_size" android:layout_marginEnd="@dimen/agenda_widget_v2_cell_color_bar_end_margin"/>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="@dimen/agenda_widget_v2_event_cell_subject_text_size" android:id="@+id/subject" android:maxLines="1" android:singleLine="true" android:includeFontPadding="false" android:fontFamily="sans-serif" style="@style/AgendaWidgetV2Subject_Dark"/>
        <TextView android:textSize="@dimen/outlook_text_size_body_1" android:id="@+id/location" android:paddingTop="@dimen/agenda_widget_v2_location_top_padding" android:includeFontPadding="false" style="@style/AgendaWidgetV2Location_Dark"/>
    </LinearLayout>
    <LinearLayout android:gravity="end" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/agenda_widget_v2_event_cell_wide_time_text_left_margin" android:layout_marginEnd="@dimen/agenda_widget_v2_event_cell_root_padding">
        <TextView android:textSize="@dimen/outlook_text_size_body_1" android:textColor="@color/grey900" android:gravity="end" android:id="@+id/time" android:paddingTop="@dimen/agenda_widget_v2_time_top_padding" android:visibility="gone" android:includeFontPadding="false" style="@style/AgendaWidgetV2TimeLabel_Dark"/>
        <TextView android:id="@+id/upcoming" android:includeFontPadding="false" style="@style/AgendaWidgetV2UpcomingLabel_Dark"/>
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:textColor="@color/grey300" android:ellipsize="end" android:id="@+id/duration" android:paddingTop="@dimen/agenda_widget_v2_duration_top_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:includeFontPadding="false"/>
    </LinearLayout>
</LinearLayout>
