            <TextSwitcher android:id="@+id/text_font_style_switcher" android:layout_width="100dp" android:layout_height="match_parent" android:contentDescription="@string/format_toolbar_font_style_body"/>
            <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingStart="@dimen/menu_icon_padding" android:paddingEnd="@dimen/menu_icon_padding">
                <ImageView android:id="@+id/compose_formatting_action_bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_text_bold_24_filled" android:contentDescription="@string/format_toolbar_bold" style="@style/Widget.Outlook.ComposeV2.ComposeFormatToolbar"/>
                <ImageView android:id="@+id/compose_formatting_action_italics" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_text_italic_24_regular" android:contentDescription="@string/format_toolbar_italics" style="@style/Widget.Outlook.ComposeV2.ComposeFormatToolbar"/>
                <ImageView android:id="@+id/compose_formatting_action_underline" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_text_underline_24_regular" android:contentDescription="@string/format_toolbar_underline" style="@style/Widget.Outlook.ComposeV2.ComposeFormatToolbar"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/menu_icon_padding" android:paddingEnd="@dimen/menu_icon_padding">
                <ImageView android:id="@+id/compose_formatting_action_bullet_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_text_bullet_list_ltr_24_regular" android:contentDescription="@string/format_toolbar_bullet_list" style="@style/Widget.Outlook.ComposeV2.ComposeFormatToolbar"/>
                <ImageView android:id="@+id/compose_formatting_action_number_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_text_number_list_ltr_24_regular" android:contentDescription="@string/format_toolbar_number_list" style="@style/Widget.Outlook.ComposeV2.ComposeFormatToolbar"/>
                <ImageView android:id="@+id/compose_formatting_action_add_link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_link_24_regular" android:contentDescription="@string/format_toolbar_link" style="@style/Widget.Outlook.ComposeV2.ComposeFormatToolbar"/>
                <ImageView android:id="@+id/compose_formatting_action_attach_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_image_24_regular" android:contentDescription="@string/compose_choose_from_photo_library" style="@style/Widget.Outlook.ComposeV2.ComposeFormatToolbar"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <androidx.appcompat.widget.AppCompatImageButton android:layout_gravity="center_vertical" android:id="@+id/compose_formatting_action_button" android:background="?attr/actionBarItemBackground" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingStart="@dimen/outlook_content_inset" android:paddingEnd="@dimen/outlook_content_inset"/>
</merge>
