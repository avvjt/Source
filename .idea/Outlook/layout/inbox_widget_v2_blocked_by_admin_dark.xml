<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/bg_widget_all_dark" android:padding="@dimen/widget_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/bg_widget_header_bar_dark" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/widget_main_banner_min_height">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/inbox_folder_and_account_container" android:background="@drawable/item_background" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:paddingStart="@dimen/inbox_widget_inbox_title_start_padding">
            <TextView android:textAppearance="@style/TextAppearance.Outlook.SubHeading" android:textStyle="bold" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/inbox_folder_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:fontFamily="sans-serif-medium"/>
            <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:textColor="@color/white_with_opacity_80" android:ellipsize="end" android:id="@+id/inbox_account" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false"/>
        </LinearLayout>
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/inbox_unread_counter" android:background="@drawable/inbox_widget_unread_count_background_dark" android:padding="@dimen/inbox_widget_unread_counter_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/inbox_widget_unread_counter_min_width" android:includeFontPadding="false" android:layout_marginStart="@dimen/inbox_widget_inbox_unread_count_start_padding"/>
        <ImageView android:id="@+id/inbox_compose_button" android:background="@drawable/item_background" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_fluent_compose_24_filled" android:tint="@android:color/white" android:contentDescription="@string/compose_inbox_widget_description" android:paddingStart="@dimen/inbox_widget_main_banner_end_padding" android:paddingEnd="@dimen/inbox_widget_main_banner_end_padding"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:paddingTop="@dimen/agenda_widget_v2_empty_state_padding_top" android:paddingBottom="@dimen/agenda_widget_v2_empty_state_padding_bottom" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="0dp" android:src="@drawable/illustration_privacy_settings" android:adjustViewBounds="true" android:maxWidth="160dp" android:maxHeight="160dp" android:layout_weight="2"/>
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Caption" android:textColor="@color/grey100" android:id="@+id/error_description" android:background="@drawable/item_background" android:layout_width="match_parent" android:layout_height="0dp" android:text="@string/account_is_blocked" android:layout_weight="1" android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
