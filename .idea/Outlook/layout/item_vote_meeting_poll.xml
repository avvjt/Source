<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:id="@+id/meeting_time" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:maxLines="2" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:layout_constraintWidth_percent="0.6"/>
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Caption" android:textColor="@color/primary_selected_dark_grey_text_selector" android:ellipsize="end" android:id="@+id/busy_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/meeting_time"/>
        <ImageView android:id="@+id/open_calendar_view_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:src="@drawable/chevron_down" android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/busy_status" app:layout_constraintStart_toEndOf="@+id/busy_status" app:layout_constraintTop_toTopOf="@+id/busy_status"/>
        <CheckBox android:id="@+id/decline_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/ic_fluent_dismiss_circle_24_selector" android:layout_marginEnd="16dp" android:buttonTint="@color/calendar_red" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0"/>
        <CheckBox android:id="@+id/accept_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/ic_fluent_checkmark_circle_24_selector" android:layout_marginEnd="16dp" android:buttonTint="@color/calendar_green" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/decline_icon" app:layout_constraintTop_toTopOf="0"/>
        <CheckBox android:id="@+id/prefer_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/ic_fluent_heart_circle_24_selector" android:layout_marginEnd="16dp" android:buttonTint="@color/calendar_red" app:circleColor="@color/calendar_red" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/accept_icon" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.acompli.acompli.ui.event.list.multiday.MultiDayView android:id="@+id/day_view" android:paddingTop="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="180dp" android:paddingStart="16dp" android:paddingEnd="16dp"/>
    <View android:id="@+id/divider" android:background="@drawable/horizontal_divider" android:layout_width="match_parent" android:layout_height="@dimen/outlook_divider_height" android:layout_marginTop="16dp"/>
</LinearLayout>
