        <RelativeLayout android:id="@+id/voice_commands_relative_layout" android:background="@drawable/voice_settings_row_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/height_45dp">
            <Switch android:theme="@style/SwitchButton" android:textSize="@dimen/text_size_14sp" android:textColor="@color/vhvc_black1" android:id="@+id/voice_commands_switch_button" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/ao" android:shadowColor="@color/vhvc_blue1" android:layout_centerVertical="true" android:layout_marginStart="@dimen/margin_44dp" android:layout_marginEnd="@dimen/margin_16dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/profanity_filter_relative_layout" android:background="@drawable/voice_settings_row_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/height_45dp">
            <Switch android:theme="@style/SwitchButton" android:textSize="@dimen/text_size_14sp" android:textColor="@color/vhvc_black1" android:id="@+id/profanity_filter_switch_button" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/al" android:shadowColor="@color/vhvc_blue1" android:layout_centerVertical="true" android:layout_marginStart="@dimen/margin_44dp" android:layout_marginEnd="@dimen/margin_16dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
