        </RelativeLayout>
        <RelativeLayout android:id="@+id/voice_language_heading_box" android:background="@drawable/voice_settings_row_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/height_45dp">
            <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/vhvc_black1" android:gravity="center" android:id="@+id/voice_language_text_view" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/ag" android:layout_marginStart="@dimen/margin_44dp"/>
