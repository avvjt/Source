        <TextView android:id="@+id/location" android:layout_marginBottom="@dimen/agenda_widget_v2_location_narrow_bottom_margin" android:includeFontPadding="false" style="@style/AgendaWidgetV2Location_Dark"/>
    </LinearLayout>
</LinearLayout>
