<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/agenda_event_item_root" android:background="@drawable/widgets_list_background_selector" android:paddingTop="@dimen/agenda_widget_v2_event_cell_root_narrow_padding_top_bottom" android:paddingBottom="@dimen/agenda_widget_v2_event_cell_root_narrow_padding_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/margin_left" android:layout_width="@dimen/agenda_widget_v2_event_cell_root_narrow_padding_left_right" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/ongoing_event_indicator" android:visibility="gone" android:layout_width="@dimen/agenda_widget_v2_event_cell_root_narrow_padding_left_right" android:layout_height="wrap_content" android:drawableStart="@drawable/arrow_blue_4dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/agenda_widget_v2_event_cell_root_narrow_padding_left_right">
        <TextView android:id="@+id/subject" android:paddingBottom="@dimen/agenda_widget_v2_subject_narrow_bottom_padding" android:maxLines="2" android:includeFontPadding="false" android:fontFamily="sans-serif-medium" style="@style/AgendaWidgetV2Subject_Dark"/>
