<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:outlook="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:id="@+id/agenda_event_item_root" android:background="@drawable/widgets_list_background_selector" android:paddingTop="@dimen/agenda_widget_event_cell_narrow_top_bottom_margin" android:paddingBottom="@dimen/agenda_widget_event_cell_narrow_top_bottom_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/agenda_widget_event_cell_narrow_min_height">
    <TextView android:id="@+id/colorbar" android:layout_width="@dimen/agenda_widget_event_cell_color_bar_width" android:layout_height="match_parent" android:layout_marginLeft="@dimen/agenda_widget_event_cell_color_bar_start_margin" android:layout_marginRight="@dimen/agenda_widget_event_cell_narrow_color_bar_end_margin" android:layout_marginStart="@dimen/agenda_widget_event_cell_color_bar_start_margin" android:layout_marginEnd="@dimen/agenda_widget_event_cell_narrow_color_bar_end_margin"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/agenda_widget_event_title_text_color" android:ellipsize="end" android:id="@+id/subject" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:fontFamily="sans-serif" style="@style/TextAppearance.Outlook.Body2"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/time_and_duration_block" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="10sp" android:textColor="@color/danger_primary" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/event_ends" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="@string/ends" android:maxLines="1" android:singleLine="true" android:layout_marginEnd="3dp" outlook:textAllCaps="true" style="@style/TextAppearance.Outlook.Body1"/>
            <TextView android:textSize="10sp" android:textColor="@color/grey900" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:drawableStart="@drawable/ic_fluent_clock_12_regular" android:layout_marginEnd="3dp" android:drawableTint="@color/widget_icon_tint" style="@style/TextAppearance.Outlook.Body1"/>
            <TextView android:textSize="10sp" android:textColor="@color/agenda_widget_event_narrow_duration_text_color" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" style="@style/TextAppearance.Outlook.Body1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
