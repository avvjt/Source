<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="30dp" android:paddingEnd="30dp">
    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:src="@drawable/bottom_sheet_handle"/>
    <TextView android:textAppearance="@style/TextAppearance.Outlook.Heading1" android:textSize="22sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="27dp" android:layout_marginBottom="25dp" android:text="@string/readout_speed"/>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_animal_turtle_28_regular" android:contentDescription="@string/slower_the_readout_speed" android:layout_alignParentStart="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_animal_rabbit_28_regular" android:contentDescription="@string/faster_the_readout_speed" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <SeekBar android:id="@+id/readout_speed_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="6" android:progress="3"/>
    <TextView android:textSize="15sp" android:gravity="center" android:id="@+id/readout_speed_display_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_marginBottom="11dp" android:text="@string/default_readout_speed_display"/>
    <View android:background="@color/outlook_app_divider" android:layout_width="match_parent" android:layout_height="@dimen/commute_divider_height"/>
    <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center_vertical" android:id="@+id/tips_item" android:layout_width="match_parent" android:layout_height="70dp" android:importantForAccessibility="yes">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_lightbulb_24_regular"/>
        <TextView android:textSize="17sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/context_menu_item_title_tips" android:paddingStart="20dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View android:background="@color/outlook_app_divider" android:layout_width="match_parent" android:layout_height="@dimen/commute_divider_height"/>
    <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center_vertical" android:id="@+id/settings_item" android:layout_width="match_parent" android:layout_height="70dp" android:importantForAccessibility="yes">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_settings_24_regular"/>
        <TextView android:textSize="17sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/context_menu_item_title_settings" android:paddingStart="20dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View android:background="@color/outlook_app_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/commute_divider_height"/>
    <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center_vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="70dp" android:importantForAccessibility="yes">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_fluent_question_circle_24_regular"/>
        <TextView android:textSize="17sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/context_menu_item_title_feedback" android:paddingStart="20dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
