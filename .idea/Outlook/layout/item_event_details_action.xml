<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="56dp" android:paddingStart="@dimen/outlook_content_inset">
    <ImageView android:id="@+id/icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginEnd="32dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Body1" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:textDirection="locale"/>
        <TextView android:textAppearance="@style/TextAppearance.Outlook.Caption.Medium" android:gravity="center_vertical" android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:textDirection="locale"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/progress" android:padding="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" style="?android:attr/progressBarStyle"/>
    <Button android:id="@+id/action_button" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/meeting_skype_join" android:paddingStart="16dp" android:paddingEnd="16dp" style="?attr/outlookAccentBorderlessButtonStyle"/>
</LinearLayout>
