<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="@integer/very_short_anim_duration" android:valueTo="0.95" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="@integer/very_short_anim_duration" android:valueTo="0.95" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="@integer/very_short_anim_duration" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="@integer/very_short_anim_duration" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
</selector>
