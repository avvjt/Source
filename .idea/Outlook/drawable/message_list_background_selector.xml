<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <color android:color="@android:color/white"/>
    </item>
    <item>
        <selector>
            <item android:state_window_focused="false" android:state_selected="true">
                <layer-list>
                    <item android:drawable="?android:attr/windowBackground"/>
                    <item android:drawable="@color/item_highlight_color"/>
                </layer-list>
            </item>
            <item android:state_window_focused="false" android:drawable="@color/outlook_app_surface_primary"/>
            <item android:drawable="@color/item_activated_color" android:state_activated="true"/>
            <item android:state_selected="true">
                <layer-list>
                    <item android:drawable="?android:attr/windowBackground"/>
                    <item android:drawable="@color/item_highlight_color"/>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple>
