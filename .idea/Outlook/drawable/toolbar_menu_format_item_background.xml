<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <selector android:enterFadeDuration="@integer/very_short_anim_duration" android:exitFadeDuration="@integer/very_short_anim_duration">
            <item android:state_activated="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/format_toolbar_menu_item_background_selector"/>
                            <corners android:radius="4dp"/>
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item android:drawable="@android:color/transparent"/>
        </selector>
    </item>
</ripple>
