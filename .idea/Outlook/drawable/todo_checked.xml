<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp"/>
                    <stroke android:width="1dp" android:color="?attr/colorAccent"/>
                    <gradient android:startColor="?attr/colorAccent" android:endColor="?attr/colorAccent" android:angle="270" android:centerColor="?attr/colorAccent"/>
                    <size android:height="26dp" android:width="26dp"/>
                </shape>
            </item>
            <item android:height="2dp" android:width="6dp" android:left="7dp" android:top="13dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@android:color/white"/>
                    </shape>
                </rotate>
            </item>
            <item android:height="2dp" android:width="11dp" android:left="10dp" android:top="12dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@android:color/white"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>
