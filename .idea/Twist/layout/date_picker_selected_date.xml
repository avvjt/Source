<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:id="@+id/day_picker_selector_layout" android:layout_width="@dimen/datepicker_component_width" android:layout_height="wrap_content">
    <TextView android:gravity="center" android:id="@+id/date_picker_header" android:layout_width="match_parent" android:layout_height="@dimen/datepicker_header_height" android:importantForAccessibility="no"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/date_picker_month_day_year_layout" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/date_picker_month_and_day_layout" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@+id/date_picker_month" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:gravity="center" android:id="@+id/date_picker_day" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-23dp" android:layout_marginBottom="-20dp"/>
        </LinearLayout>
        <TextView android:gravity="center" android:id="@+id/date_picker_year" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
