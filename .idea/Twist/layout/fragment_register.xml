<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar android:layout_gravity="center" android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="?attr/actionBarSize"/>
    <androidx.appcompat.widget.Toolbar android:theme="?attr/toolbarTheme" android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="?attr/actionBarSize" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/register_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
            <TextView android:textAppearance="@style/TextAppearance.Twist.Onboarding.Title" android:gravity="start|center_vertical" android:id="@+id/form_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:layout_marginBottom="@dimen/standard_spacing" android:text="@string/complete_your_profile" android:textAlignment="gravity" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing"/>
            <TextView android:textAppearance="@style/TextAppearance.Twist.Onboarding.Subtitle" android:id="@+id/form_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_spacing" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/name_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/user_name_full_name" android:layout_marginStart="@dimen/fake_standard_spacing" android:layout_marginEnd="@dimen/standard_spacing">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/name_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:inputType="textCapWords" android:imeOptions="flagNoExtractUi|actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" android:gravity="start|center_vertical" android:id="@+id/name_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_micro_spacing" android:text="@string/user_name_desc" android:textAlignment="gravity" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/password_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:hint="@string/password" android:layout_marginStart="@dimen/fake_standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" app:endIconMode="1">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/password_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:inputType="textPassword" android:imeOptions="flagNoExtractUi|actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" android:gravity="start|center_vertical" android:id="@+id/password_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_micro_spacing" android:textAlignment="gravity" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing"/>
            <Button android:id="@+id/submit_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:text="@string/sign_up" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.Onboarding.Button.Colored"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
