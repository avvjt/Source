<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" app:navigationIcon="@drawable/ic_action_close"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_gravity="center" android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true"/>
        <com.twistapp.ui.widgets.IconEmptyView android:layout_gravity="center" android:id="@+id/empty" android:background="?attr/selectableItemBackground" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" app:emptyIcon="@drawable/ic_empty_channels"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/join_channels_container" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textAppearance="@style/TextAppearance.Twist.Onboarding.Title" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:layout_marginBottom="@dimen/standard_small_spacing" android:text="@string/join_channels" android:textAlignment="gravity" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing"/>
            <TextView android:textAppearance="@style/TextAppearance.Twist.Onboarding.Subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_small_spacing" android:layout_marginBottom="@dimen/standard_spacing" android:text="@string/join_channels_desc" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler" android:paddingBottom="@dimen/standard_small_spacing" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
            <Button android:layout_gravity="end" android:id="@+id/next_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_small_spacing" android:text="@string/join_channels" android:paddingStart="@dimen/standard_spacing" android:paddingEnd="@dimen/standard_spacing" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.Onboarding.Button.Colored"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
