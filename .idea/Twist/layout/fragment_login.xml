<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar android:layout_gravity="center" android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.Toolbar android:theme="?attr/toolbarTheme" android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="?attr/actionBarSize">
        <LinearLayout android:orientation="vertical" android:id="@+id/login_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
            <TextView android:textAppearance="@style/TextAppearance.Twist.Onboarding.Title" android:gravity="start|center_vertical" android:id="@+id/form_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:layout_marginBottom="@dimen/standard_spacing" android:text="@string/login_to_twist" android:textAlignment="gravity" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing"/>
            <TextView android:textAppearance="@style/TextAppearance.Twist.Onboarding.Subtitle" android:id="@+id/form_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_spacing" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/password_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_spacing" android:hint="@string/password" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" app:endIconMode="1">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/password_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:inputType="textPassword" android:imeOptions="flagNoExtractUi|actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button android:id="@+id/sign_in_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_spacing" android:text="@string/log_in" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.Onboarding.Button.Colored"/>
            <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/forgot_password_link" android:layout_width="wrap_content" android:layout_height="@dimen/forgot_password_link_height" android:layout_marginBottom="@dimen/standard_spacing" android:text="@string/forgot_password_button" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.Onboarding.Footer"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
