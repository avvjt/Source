<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/linearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="@dimen/dialog_min_width">
    <androidx.emoji.widget.EmojiAppCompatTextView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dialog_standard_margin" android:layout_marginBottom="@dimen/dialog_standard_margin" android:layout_weight="0" android:layout_marginStart="@dimen/dialog_standard_margin" android:layout_marginEnd="@dimen/dialog_standard_margin" style="@style/Widget.Twist.CustomDialog.Title"/>
    <ScrollView android:id="@+id/scroll" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:fadeScrollbars="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.emoji.widget.EmojiAppCompatTextView android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_spacing" android:layout_marginStart="@dimen/dialog_standard_margin" android:layout_marginEnd="@dimen/dialog_standard_margin" style="@style/Widget.Twist.CustomDialog.Message"/>
            <androidx.appcompat.widget.AppCompatCheckBox android:id="@+id/checkbox" android:layout_width="match_parent" android:layout_height="wrap_content" android:checked="false" android:text="@string/user_type_confirmation_answer" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/dialog_standard_margin" style="@style/Widget.Twist.CustomDialog.Checkbox"/>
        </LinearLayout>
    </ScrollView>
    <Button android:enabled="false" android:layout_gravity="end" android:id="@+id/button_positive" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_small_spacing" android:layout_weight="0" android:layout_marginEnd="@dimen/standard_small_spacing" style="@style/Widget.Twist.CustomDialog.Button.Positive"/>
    <Button android:gravity="right|center_vertical|center_horizontal|center|end" android:layout_gravity="end" android:id="@+id/button_negative" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_small_spacing" android:text="@string/dialog_button_cancel" android:layout_weight="0" android:layout_marginEnd="@dimen/standard_small_spacing" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
</LinearLayout>
