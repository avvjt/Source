<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:textColor="@android:color/black" android:id="@+id/flagValueButton" android:paddingLeft="4pt" android:paddingRight="4pt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="50dp" android:text="Flag Value" android:layout_alignParentRight="true"/>
        <TextView android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/flagListText" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Flag Name" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <TextView android:textSize="12sp" android:textColor="@android:color/black" android:id="@+id/flagListSubtext" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="15dp" android:text="Flag Status" android:layout_below="@+id/flagListText"/>
    </RelativeLayout>
</LinearLayout>
