<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:theme="?attr/toolbarTheme" android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" app:popupTheme="?attr/toolbarPopupTheme"/>
    <ProgressBar android:layout_gravity="center" android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:layout_gravity="center" android:id="@+id/empty" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/email_loop_in_error"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="?attr/actionBarSize">
        <TextView android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.EmailLoopIn.Description"/>
        <TextView android:id="@+id/email" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:layout_marginBottom="@dimen/standard_spacing" android:layout_below="@+id/description" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.EmailLoopIn.Email"/>
        <Button android:id="@+id/copy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/email_loop_in_copy" android:layout_below="@+id/email" android:layout_marginStart="12dp" android:layout_marginEnd="12dp" android:layout_alignParentEnd="true" style="@style/Widget.AppCompat.Button.Colored"/>
        <Button android:textColor="?android:attr/textColorPrimary" android:id="@+id/disable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/email_loop_in_disable" android:layout_below="@+id/email" android:paddingStart="16dp" android:paddingEnd="16dp" android:layout_marginStart="12dp" android:layout_marginEnd="12dp" app:backgroundTint="?attr/colorBackgroundFloating" style="@style/Widget.AppCompat.Button"/>
    </RelativeLayout>
</FrameLayout>
