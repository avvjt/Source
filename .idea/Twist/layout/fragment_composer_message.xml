<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/collapsed" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="?android:attr/textColorSecondary" android:id="@+id/input_placeholder" android:background="@drawable/theme_background_idle_composer_placeholder" android:paddingLeft="@dimen/standard_spacing" android:paddingTop="@dimen/standard_small_spacing" android:paddingRight="@dimen/standard_spacing" android:paddingBottom="@dimen/standard_small_spacing" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/standard_small_spacing" android:layout_marginTop="@dimen/standard_small_spacing" android:layout_marginRight="@dimen/standard_small_spacing" android:layout_marginBottom="@dimen/standard_small_spacing" android:layout_marginHorizontal="@dimen/standard_small_spacing" android:layout_marginVertical="@dimen/standard_small_spacing" android:paddingHorizontal="@dimen/standard_spacing" android:paddingVertical="@dimen/standard_small_spacing"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/expanded" android:layout_width="match_parent" android:layout_height="wrap_content">
