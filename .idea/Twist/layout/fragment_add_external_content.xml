<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:theme="?attr/toolbarTheme" android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" app:navigationIcon="@drawable/ic_action_close" app:popupTheme="?attr/toolbarPopupTheme" app:title="@string/add_external_content_title"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/content_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="?attr/actionBarSize">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_workspace_container" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_small_spacing">
            <TextView android:id="@+id/tv_workspace_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:text="@string/add_external_workspace_title" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.ExternalContent.Title"/>
            <TextView android:id="@+id/tv_workspace_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_spacing" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.ExternalContent.Description"/>
        </LinearLayout>
        <View android:background="?attr/dividerDefault" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_channel_conversation_container" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_channel_conversation_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:text="@string/add_external_channel_message_title" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.ExternalContent.Title"/>
            <TextView android:id="@+id/tv_channel_conversation_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_spacing" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.ExternalContent.Description"/>
        </LinearLayout>
        <View android:id="@+id/post_divider" android:background="?attr/dividerDefault" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_post_container" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_post_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_spacing" android:text="@string/add_external_thread_title" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.ExternalContent.Title"/>
            <TextView android:id="@+id/tv_post_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_spacing" android:layout_marginStart="@dimen/standard_spacing" android:layout_marginEnd="@dimen/standard_spacing" style="@style/Widget.Twist.ExternalContent.Description"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar android:layout_gravity="center" android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true"/>
</FrameLayout>
