<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.twistapp.ui.widgets.avatar.AvatarView android:layout_gravity="center_vertical" android:id="@+id/avatar" android:layout_width="@dimen/standard_list_item_icon_size" android:layout_height="@dimen/standard_list_item_icon_size" android:layout_marginTop="@dimen/standard_spacing" android:layout_marginBottom="@dimen/standard_spacing" android:contentDescription="@string/content_description_avatar" android:layout_marginStart="@dimen/standard_spacing"/>
