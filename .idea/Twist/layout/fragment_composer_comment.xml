<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/collapsed" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_gravity="center_vertical" android:id="@+id/banner_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/standard_micro_spacing" android:paddingStart="@dimen/standard_spacing" android:paddingEnd="@dimen/standard_spacing" style="@style/Widget.AppCompat.Button.Colored"/>
        <TextView android:textColor="?android:attr/textColorSecondary" android:id="@+id/banner_text" android:padding="@dimen/standard_spacing" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <com.twistapp.ui.widgets.ActionsView android:id="@+id/actions" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/expanded" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.twistapp.ui.widgets.SmartListTextView android:id="@+id/recipients" android:layout_width="match_parent" android:layout_height="@dimen/composer_extended_panel_height" android:layout_marginStart="@dimen/standard_micro_spacing" android:layout_marginEnd="@dimen/standard_micro_spacing" android:layout_toStartOf="@+id/maximize_button" app:smartEmpty="@string/notify_recipient_text_empty_composer" app:smartFallback="@plurals/notify_recipient_text_fallback" app:smartText="@string/notify_recipient_text" style="@style/Widget.Twist.Composer.ExtendedPanel"/>
        <ImageView android:id="@+id/maximize_button" android:layout_width="@dimen/composer_extended_panel_height" android:layout_height="@dimen/composer_extended_panel_height" android:layout_below="@+id/attachments" android:layout_alignParentEnd="true" style="@style/Widget.Twist.Composer.Button.Maximize"/>
        <com.twistapp.ui.widgets.AttachmentsView android:id="@+id/attachments" android:layout_width="match_parent" android:layout_height="@dimen/composer_attachment_height" android:layout_below="@+id/recipients"/>
        <EditText android:id="@+id/input" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/attachments" android:layout_marginStart="@dimen/standard_micro_spacing" android:layout_marginEnd="@dimen/standard_micro_spacing" android:importantForAutofill="2" style="@style/Widget.Twist.Composer.Input"/>
        <ImageView android:id="@+id/action_button" android:layout_width="@dimen/composer_button_size" android:layout_height="@dimen/composer_button_size" android:layout_below="@+id/input" style="@style/Widget.Twist.Composer.Button.Action"/>
        <ImageView android:id="@+id/file_button" android:layout_width="@dimen/composer_button_size" android:layout_height="@dimen/composer_button_size" android:layout_below="@+id/input" android:layout_toEndOf="@+id/action_button" style="@style/Widget.Twist.Composer.Button.File"/>
        <ImageView android:id="@+id/media_button" android:layout_width="@dimen/composer_button_size" android:layout_height="@dimen/composer_button_size" android:layout_below="@+id/input" android:layout_toEndOf="@+id/file_button" style="@style/Widget.Twist.Composer.Button.Media"/>
        <ImageView android:id="@+id/photo_button" android:layout_width="@dimen/composer_button_size" android:layout_height="@dimen/composer_button_size" android:layout_below="@+id/input" android:layout_toEndOf="@+id/media_button" style="@style/Widget.Twist.Composer.Button.Photo"/>
        <ImageView android:id="@+id/mention_button" android:layout_width="@dimen/composer_button_size" android:layout_height="@dimen/composer_button_size" android:layout_below="@+id/input" android:layout_toEndOf="@+id/photo_button" style="@style/Widget.Twist.Composer.Button.Mention"/>
        <ImageView android:id="@+id/submit_button" android:layout_width="@dimen/composer_button_size" android:layout_height="@dimen/composer_button_size" android:layout_below="@+id/input" android:layout_alignParentEnd="true" style="@style/Widget.Twist.Composer.Button.Submit"/>
    </RelativeLayout>
</LinearLayout>
