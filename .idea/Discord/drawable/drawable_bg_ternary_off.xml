<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@c/black_alpha_20"/>
            <corners android:topLeftRadius="4dp" android:bottomLeftRadius="4dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@c/status_red_500"/>
            <corners android:topLeftRadius="4dp" android:bottomLeftRadius="4dp"/>
            <solid android:color="@c/status_red_500"/>
        </shape>
    </item>
</selector>
