<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@h/UiKit_ViewGroup_Page">
    <ImageView android:id="@+id/premium_upsell_close" android:padding="16dp" android:src="@d/ic_close_white_18dp" android:layout_alignParentTop="true" android:contentDescription="@g/close_window" android:layout_alignParentEnd="true" style="@h/UiKit_ImageView_Clickable"/>
    <LinearLayout android:layout_marginLeft="24dp" android:layout_marginRight="24dp" style="@h/UiKit_ViewGroup_LinearLayout">
        <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_marginTop="32dp" android:layout_marginBottom="16dp" android:src="@d/img_premium_guild_subscription_purchase_header_tier_2" android:importantForAccessibility="no" style="@h/UiKit_ImageView"/>
        <TextView android:textSize="@dimen/uikit_textsize_large" android:gravity="center" android:id="@+id/premium_upsell_description" android:layout_marginBottom="16dp" android:lineSpacingMultiplier="1" style="@h/UiKit_TextView"/>
        <androidx.cardview.widget.CardView android:background="@c/transparent" android:layout_marginBottom="16dp" app:cardCornerRadius="8dp" style="@h/UiKit_ViewGroup_LinearLayout">
            <LinearLayout android:background="?attr/colorBackgroundSecondary" android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="16dp" android:paddingBottom="8dp" style="@h/UiKit_ViewGroup_LinearLayout">
                <TextView android:textColor="?attr/colorTextNormal" android:id="@+id/premium_upsell_server_perk" android:layout_width="match_parent" app:drawableStartCompat="@d/ic_boosted_badge_24dp" style="@h/UiKit_TextView_Perk_Small"/>
                <View android:background="?attr/colorBackgroundPrimary" android:layout_height="1dp" style="@h/UiKit_Divider"/>
                <TextView android:layout_width="match_parent" android:text="@g/premium_upsell_feature_chat_perks_mobile" app:drawableStartCompat="@d/ic_emoji_blue_24dp" style="@h/UiKit_TextView_Perk_Small"/>
                <View android:background="?attr/colorBackgroundPrimary" android:layout_height="1dp" style="@h/UiKit_Divider"/>
                <TextView android:layout_width="match_parent" android:text="@g/premium_upsell_feature_stream" app:drawableStartCompat="@d/ic_nitro_perk_stream_24dp" app:drawableTint="?attr/primary_300" style="@h/UiKit_TextView_Perk_Small"/>
                <View android:background="?attr/colorBackgroundPrimary" android:layout_height="1dp" style="@h/UiKit_Divider"/>
                <TextView android:layout_width="match_parent" android:text="@g/premium_upsell_feature_upload" app:drawableStartCompat="@d/ic_upload_24dp" app:drawableTint="#fed648" style="@h/UiKit_TextView_Perk_Small"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout android:layout_marginBottom="32dp" style="@h/UiKit_ViewGroup_LinearLayout">
            <com.google.android.material.button.MaterialButton android:id="@+id/upgrade_button" android:layout_marginBottom="16dp" android:text="@g/premium_upsell_upgrade" style="@h/UiKit_Dialog_Button"/>
            <TextView android:id="@+id/continue_button" android:text="@g/premium_upsell_continue_to_boosts" style="@h/UiKit_Dialog_TextView_Dismiss"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
